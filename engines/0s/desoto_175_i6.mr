        .add_sample(1706.7 * units.rpm, 20.6 * units.deg)
        .add_sample(1920.0 * units.rpm, 22.0 * units.deg)
        .add_sample(2133.3 * units.rpm, 23.2 * units.deg)
        .add_sample(2346.7 * units.rpm, 24.2 * units.deg)
        .add_sample(2560.0 * units.rpm, 25.0 * units.deg)
        .add_sample(2773.3 * units.rpm, 25.0 * units.deg)
