import "engine_sim.mr"
import "../../fuel/90.mr"

units units()
constants constants()

// Engine Sim V0.1.14A
// 2-rotor
// wankel_2
// Created by oror 2023
// 1-2

label rotor_sides(3.0)
label rotors(2.0)
label rotor_initial_angle(60.0 * units.deg)

label rot360(360.0 * units.deg)
label cycle(rotor_sides * 360.0 * units.deg)

label intake_port_center(38.0) // + degrees relative to TDC axis
label exhaust_port_center(46.0) // - degrees relative to TDC axis

label intake_port_duration(24.0) // degrees
label exhaust_port_duration(20.0) // degrees

label stroke(3.0 * units.cm)
label radius(10.5 * units.cm)
label depth(8.0) // units.cm
label depression_volume(26.0 * units.cc) // 9.7 CR
label intake_port_start(130.0 * units.deg) // wankel.py v0.1
label intake_port_end(154.0 * units.deg) // wankel.py v0.1
label exhaust_port_start(216.0 * units.deg) // wankel.py v0.1
label exhaust_port_end(236.0 * units.deg) // wankel.py v0.1
label rotor_mass(4328 * units.g)
label rotor_I(disk_moment_of_inertia(mass: rotor_mass, radius: radius))
label intake_runner_area(23.750) // wankel.py v0.1
label exhaust_runner_area(19.792) // wankel.py v0.1
label intake_flow(k_carb(308.756)) // wankel.py v0.1
label exhaust_flow(k_carb(257.296)) // wankel.py v0.1

label volume(1.3)
label redline(7500.0)

private node wires {
    output wire1: ignition_wire();
    output wire2: ignition_wire();
}

private node eng {
    alias output __out: engine;

    wankel_engine engine(
        name: "Mazda 13b 2-rotor",
        starter_torque: 100 * units.Nm,
        starter_speed: 1000 * units.rpm,
        redline: redline * units.rpm,
        fuel: fuel(
            max_burning_efficiency: 0.95,
            max_dilution_effect: 1.5,
            burning_efficiency_randomness: 0.5
        ),
        throttle_gamma: 1.7,
        hf_gain: 0.01,
        noise: 0.5,
        jitter: 0.2,
        simulation_frequency: 16000,
        rotor_calculation_quality: 1024,
        rotor_housing_resolution: 1024
    )

    wires wires()

    crankshaft c0(
        throw: 0.5 * stroke,
        flywheel_mass: 2 * units.kg,
        mass: 5 * units.kg,
        friction_torque: 20.0 * units.Nm,
        moment_of_inertia: 0.08,
        position_x: 0.0,
        position_y: 0.0,
        tdc: 0.0 * units.deg
    )

    rod_journal rj0(angle: (0.0 / rotors) * rot360)
    rod_journal rj1(angle: (1.0 / rotors) * rot360)

    c0
        .add_rod_journal(rj0)
        .add_rod_journal(rj1)

    engine.add_crankshaft(c0)

    wankel_rotor rotor0(
        mass: rotor_mass,
        moment_of_inertia: rotor_I,
        radius: radius,
        crown_gear_radius: 3 * 0.5 * stroke,
        angle: rotor_initial_angle + (0.0 / (rotors * rotor_sides)) * rot360,
        depth: depth * units.cm,
        depression_volume: depression_volume
    )

    wankel_rotor rotor1(
        mass: rotor_mass,
        moment_of_inertia: rotor_I,
        radius: radius,
        crown_gear_radius: 3 * 0.5 * stroke,
        angle: rotor_initial_angle + (1.0 / (rotors * rotor_sides)) * rot360,
        depth: depth * units.cm,
        depression_volume:depression_volume
    )

    intake intake(
        plenum_volume: 1.5 * units.L,
        plenum_cross_section_area: (intake_runner_area * rotors / 2) * units.cm2,
        intake_flow_rate: k_carb(intake_cfm),
        idle_flow_rate: k_carb(0.25),
        idle_throttle_plate_position: 0.981,
        runner_flow_rate: k_carb(intake_cfm / rotors),
        runner_length: 10.0 * units.cm,
        velocity_decay: 0.05
    )

    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(exhaust_cfm),
        primary_tube_length: 50.0 * units.cm,
        collector_cross_section_area: (exhaust_runner_area * rotors / 2) * units.cm2,
        primary_flow_rate: k_carb(exhaust_cfm / rotors),
        velocity_decay: 1.2,
        length: 150.0 * units.cm,
        backflow_atmospheric_mixing: 0.5,
        volume: 4.0 * units.L
    )
 
    // exhaust_system exhaust0(es_params0, audio_volume: 0.05, impulse_response: impulse_response(filename: "E:/smooth_m.wav", volume: 0.001))
    exhaust_system exhaust0(es_params0, audio_volume: 1.0, impulse_response: ir_lib.minimal_muffling_01)
    // minimal_muffling_01 
    
    label div(1.2)
    label pl0 (0.0 * (depth * units.cm) / div)
    label pl1 (1.0 * (depth * units.cm) / div)

    engine.add_rotor(
        intake,
        exhaust0,
        rotor0,
        rj0,
        wires.wire1,
        primary_length: pl0,
        intake_port: default_wankel_peripheral_port(intake_port_start, intake_port_end, intake_flow),
        exhaust_port: default_wankel_peripheral_port(exhaust_port_start, exhaust_port_end, exhaust_flow),
        intake_runner_cross_section_area: intake_runner_area * units.cm2,
        exhaust_cross_section_area: exhaust_runner_area * units.cm2,
        spark_plug_angle: 0
    )
    engine.add_rotor(
        intake,
        exhaust0,
        rotor1,
        rj1,
        wires.wire2,
        primary_length: pl1,
        intake_port: default_wankel_peripheral_port(intake_port_start, intake_port_end, intake_flow),
        exhaust_port: default_wankel_peripheral_port(exhaust_port_start, exhaust_port_end, exhaust_flow),
        intake_runner_cross_section_area: intake_runner_area * units.cm2,
        exhaust_cross_section_area: exhaust_runner_area * units.cm2,
        spark_plug_angle: 0
    )

    // ignition_timing.py v0.2 a = 8.0, m = 1.2, r = 7500
    function timing_curve(750.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(750.0 * units.rpm, 8.0 * units.deg)
        .add_sample(1500.0 * units.rpm, 9.6 * units.deg)
        .add_sample(2250.0 * units.rpm, 11.5 * units.deg)
        .add_sample(3000.0 * units.rpm, 13.8 * units.deg)
        .add_sample(3750.0 * units.rpm, 16.6 * units.deg)
        .add_sample(4500.0 * units.rpm, 19.9 * units.deg)
        .add_sample(5250.0 * units.rpm, 23.9 * units.deg)
        .add_sample(6000.0 * units.rpm, 28.7 * units.deg)
        .add_sample(6750.0 * units.rpm, 34.4 * units.deg)
        .add_sample(7500.0 * units.rpm, 41.3 * units.deg)
        .add_sample(8250.0 * units.rpm, -12.5 * units.deg)
        .add_sample(9000.0 * units.rpm, -25.0 * units.deg)

    engine.add_ignition_module(
        ignition_module(timing_curve: timing_curve, rev_limit: 8000 * units.rpm, limiter_duration: 0.03)
            .connect_wire(wires.wire1, (0.0 / (rotors * rotor_sides)) * cycle)
            .connect_wire(wires.wire2, (1.0 / (rotors * rotor_sides)) * cycle)
            
            .connect_wire(wires.wire1, (2.0 / (rotors * rotor_sides)) * cycle)
            .connect_wire(wires.wire2, (3.0 / (rotors * rotor_sides)) * cycle)
            
            .connect_wire(wires.wire1, (4.0 / (rotors * rotor_sides)) * cycle)
            .connect_wire(wires.wire2, (5.0 / (rotors * rotor_sides)) * cycle)
    )
}

// 93-95 RX7 Turbo
public node veh {
    alias output __out: vehicle;
    vehicle vehicle(
        mass: 1284  * units.kg,
        drag_coefficient: 0.33,
        cross_sectional_area: (1750  * units.mm) * (1230 * units.mm),
        diff_ratio: 4.1,
        tire_radius: (632.0 / 2) * units.mm, // 225/50ZR16
        rolling_resistance: 20,
        damping: 15.0,
        max_flex: 5 * units.deg,
        limit_flex: true,
        simulate_flex: true
        )
}

// 93-95 RX7 Turbo
private node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 350 * units.Nm,
            max_clutch_flex: 10 * units.deg,
            limit_clutch_flex: true,
            clutch_stiffness: 50 * units.Nm / units.deg,
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.483)
        .add_gear(2.015)
        .add_gear(1.391)
        .add_gear(1.0)
        .add_gear(0.719);
}

run(
    engine: eng(),
    transmission: trn(),
    vehicle: veh()
)
