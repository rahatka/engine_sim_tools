public node eng {
    alias output __out: engine;

    engine engine(
        name: "VAZ-1111",
        starter_torque: 100 *units.Nm,
        starter_speed: 300 * units.rpm,
        redline: redline * units.rpm,
        fuel: fuel( // ChatGPT regular 60s gasoline
            max_turbulence_effect: 2.2,
            burning_efficiency_randomness: 0.3,
            max_burning_efficiency: 0.82,
            molecular_mass: 114.0 * units.g,
            energy_density: 44.0 * units.MJ / units.kg,
            density: 0.74 * units.kg / units.L,
            molecular_afr: 14.0  
        ),
        throttle_gamma: 1.5,
        jitter: 0.7,
        noise: 0.2,
        hf_gain: 0.002,
        simulation_frequency: 12000 
    )

    wires wires()

    connecting_rod_parameters cr_params(
        mass: con_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: con_rod_mass * units.g,
            length: con_rod * units.mm
        ),
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 2.7) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft c0(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 1.0 * units.Nm, // port_flow.py v0.8
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        position_x: 0.0,
        position_y: 0.0,
        tdc: 0.0
    )

    rod_journal rj0(angle: rot * 0 + rot90)
    rod_journal rj1(angle: rot * 1 + rot90)
    
    c0
        .add_rod_journal(rj0)
        .add_rod_journal(rj1)

    piston_parameters piston_params(
        mass: piston_mass * units.g,
        blowby: k_28inH2O(0.1),
        compression_height: compression_height,
        wrist_pin_position: 0.0,
        displacement: 0.0
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )

    label collector_cross_section_area(4.9) // port_flow.py v0.8

    label exhaust_pipe_length_0(200.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres
    
    label spacing_factor(1.2)
    label flange_density(1.0 * exhaust_delay_coeff)

    intake intake(
        plenum_volume: 0.4 * units.L, // port_flow.py v0.8
        plenum_cross_section_area: 7.4 * units.cm2, // port_flow.py v0.8
        runner_length: 16.5 * units.cm, // port_flow.py v0.8
        intake_flow_rate: k_carb(54.0), // port_flow.py v0.8
        idle_flow_rate: k_carb(0.02),
        idle_throttle_plate_position: 0.986,
        runner_flow_rate: k_carb(61.7), // port_flow.py v0.8
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(90.0), // port_flow.py v0.8
        collector_cross_section_area: 4.9 * units.cm2, // CF 1.0; port_flow.py v0.8
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 60.9 * units.cm, // port_flow.py v0.8
        primary_flow_rate: k_carb(102.9), // port_flow.py v0.8
        velocity_decay: 1.0,
        volume: exhaust_volume_0 * units.L
    )

    exhaust_system exhaust0(es_params0, impulse_response: ir_lib.default_0, audio_volume: 0.1)
 
    cylinder_bank b0(bank_params, angle: 0)

    label pl0((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl1((1.0 * bore * spacing_factor / flange_density) * units.mm)

    b0
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj0,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl0,
            ignition_wire: wires.wire1
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj1,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl1,
            ignition_wire: wires.wire2
        )

    engine
        .add_cylinder_bank(b0)

    engine.add_crankshaft(c0)

    camshaft_builder camshaft()

    b0.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_0,
            exhaust_camshaft: camshaft.exhaust_cam_0,
            flip_display: true
        )
    )

    // ignition_timing.py v0.3 from = 3.0, to = 28.0, i = 500, r = 5750
    function timing_curve(575.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(575.0 * units.rpm, 3.0 * units.deg)
        .add_sample(1150.0 * units.rpm, 3.8 * units.deg)
        .add_sample(1725.0 * units.rpm, 4.9 * units.deg)
        .add_sample(2300.0 * units.rpm, 6.3 * units.deg)
        .add_sample(2875.0 * units.rpm, 8.1 * units.deg)
        .add_sample(3450.0 * units.rpm, 10.4 * units.deg)
        .add_sample(4025.0 * units.rpm, 13.3 * units.deg)
        .add_sample(4600.0 * units.rpm, 17.0 * units.deg)
        .add_sample(5175.0 * units.rpm, 21.8 * units.deg)
        .add_sample(5750.0 * units.rpm, 28.0 * units.deg)
        .add_sample(6325.0 * units.rpm, -15.0 * units.deg)
        .add_sample(6900.0 * units.rpm, -60.0 * units.deg)

    engine.add_ignition_module(
        eng_distributor(
            wires: wires,
            timing_curve: timing_curve
        )
    )
}

