import "engine_sim.mr"
import "_fuel_30.mr"

units units()
constants constants()

label bore(100.0)
label stroke(76.4)
label compression_ratio(11.3)
label con_rod(stroke * 2.5)
label IVL(13.2) // valve lift, not lobe lift
label EVL(13.2) // valve lift, not lobe lift
label compression_height(31.7 * units.mm)
label intake_valve_diameter(50.0)
label exhaust_valve_diameter(43.5)
label intake_valves(1.0)
label exhaust_valves(1.0)

label cyl(21.0)
label row(7.0)
label cyl_base(cyl / row)
label cycle(720.0 * units.deg)
label rot(cycle / cyl)
label rot_base(720.0 / cyl_base * units.deg)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)
label vee(rot360 / row)

label volume(12.601) // L
label redline(7500.0) // RPM

// 964 / 993 Street / Sport Cam valve timings
label IVO(30.0 * units.deg) //BTDC
label IVC(78.0 * units.deg) //ABDC
label EVO(74.0 * units.deg) //BBDC
label EVC(26.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label con_rod_mass(535.0) // g
label crank_mass(25.0) // kg
label flywheel_mass(8.0) // kg

label exhaust_delay_coeff(1.5)

public node intake_lobe_profile {
    alias output __out:
        harmonic_cam_lobe(
            duration_at_50_thou: intake_duration,
            gamma: 4.5,
            lift: IVL * units.mm,
            steps: 100
        );
}

public node exhaust_lobe_profile {
    alias output __out:
        harmonic_cam_lobe(
            duration_at_50_thou: exhaust_duration,
            gamma: 4.5,
            lift: EVL * units.mm, // valve lift, not lobe lift
            steps: 100
        );
}

private node add_lobes {
    input base;
    input shift: 0.0;
    input this;
    alias output __out: this;

    this.add_lobe(base + 0 * rot * row + shift)
    this.add_lobe(base + 2 * rot * row + shift)
    this.add_lobe(base + 1 * rot * row + shift)
}

public node bank_builder {
    input shift;
    input ignition;
    input intake;
    input exhaust;

    input rj0;
    input rj1;
    input rj2;

    input pl0;
    input pl1;
    input pl2;

    output b0: _b0;

    ignition_wire _wire1()
    ignition_wire _wire2()
    ignition_wire _wire3()



    connecting_rod_parameters cr_params(
        mass: con_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: con_rod_mass * units.g,
            length: con_rod * units.mm
        ),
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    piston_parameters piston_params(
        mass: 500 * units.g,
        blowby: k_28inH2O(0.1),
        compression_height: compression_height,
        wrist_pin_position: 0.0,
        displacement: 0.0
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )

    camshaft _intake_cam_0(base_radius: IVL * 1.5 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: EVL * 1.5 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0.add_lobes(ILC, -shift)
    _exhaust_cam_0.add_lobes(ELC, -shift)

    cylinder_bank _b0(bank_params, angle: shift)

    _b0.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj0,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl0,
            ignition_wire: _wire1
        )
    _b0.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj1,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl1,
            ignition_wire: _wire2
        )
    _b0.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj2,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl2,
            ignition_wire: _wire3
        )

    _b0.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_0,
            exhaust_camshaft: _exhaust_cam_0
        )
    )

    ignition
        .connect_wire(_wire1, rot_base * 0 - shift)
        .connect_wire(_wire3, rot_base * 1 - shift)
        .connect_wire(_wire2, rot_base * 2 - shift)
}

private node add_flow_sample {
    input lift;
    input flow;
    input this;
    alias output __out: this;

    this.add_sample(lift * units.mm, k_28inH2O(flow))
}

public node head { // generated by port_flow.py v0.5
    // intake H: 50.0 L: 13.2 N: 1.0
    // exhaust H: 43.5 L: 13.2 N: 1.0
    // intake port area: 1668.971 mm2; effective lift: 10.842 mm
    // exhaust port area: 1263.244 mm2; effective lift: 9.432 mm
    // cylinder volume: 600.044 cc; engine volume: 12.601 L; 768.959 CI
    // 16 harmonic intake runner length: 12.090 cm; diameter: 4.798 cm
    // primary length: 41.929 cm, area: 11.932 cm2, diameter: 3.898 cm
    // collector diameter: 4.774 cm, area: 17.899 cm2
    // target power: 6750 RPM, torque: 4455 RPM

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    function intake_flow(1.320 * units.mm)
    intake_flow
        .add_flow_sample(0.0, 0.0)
        .add_flow_sample(1.320, 45.423)
        .add_flow_sample(2.640, 79.020)
        .add_flow_sample(3.960, 108.153)
        .add_flow_sample(5.280, 134.388)
        .add_flow_sample(6.600, 158.467)
        .add_flow_sample(7.920, 180.828)
        .add_flow_sample(9.240, 201.761)
        .add_flow_sample(10.560, 221.471)
        .add_flow_sample(11.880, 231.152)
        .add_flow_sample(13.200, 232.138)
        
    function exhaust_flow(1.320 * units.mm)
    exhaust_flow
        .add_flow_sample(0.0, 0.0)
        .add_flow_sample(1.320, 40.684)
        .add_flow_sample(2.640, 70.490)
        .add_flow_sample(3.960, 96.192)
        .add_flow_sample(5.280, 119.228)
        .add_flow_sample(6.600, 140.281)
        .add_flow_sample(7.920, 159.755)
        .add_flow_sample(9.240, 177.914)
        .add_flow_sample(10.560, 184.503)
        .add_flow_sample(11.880, 185.308)
        .add_flow_sample(13.200, 186.179)
        
    cylinder_head head(
        chamber_volume: 53.101 * units.cc,
        intake_runner_volume: 218.580 * units.cc,
        intake_runner_cross_section_area: 18.079 * units.cm2,
        exhaust_runner_volume: 72.860 * units.cc,
        exhaust_runner_cross_section_area: 11.932 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        intake_camshaft: intake_camshaft,
        exhaust_camshaft: exhaust_camshaft,
        flip_display: flip_display
    )
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "A. S. Deerhound",
        starter_torque: 200 * units.Nm,
        starter_speed: 500 * units.rpm,
        redline: redline * units.rpm,
        fuel: fuel(
            max_turbulence_effect: 3.0,
            burning_efficiency_randomness: 0.2,
            max_burning_efficiency: 0.99
        ),
        throttle_gamma: 2.0,
        jitter: 0.5,
        noise: 0.1,
        hf_gain: 0.001,
        fluid_simulation_steps: 4,
        max_sle_solver_steps: 32,
        simulation_frequency: 5500,
        dyno_min_speed: 500 * units.rpm
    )

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 3.5) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft c0(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 20.0 * units.Nm,
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        position_x: 0.0,
        position_y: 0.0,
        tdc: 0.0
    )

    bank_builder bank0(
        shift: 0.0 * units.deg,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh0, pl1 + sh0, pl2 + sh0
    )
    bank_builder bank1(
        shift: vee * 1 + rot360,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh1, pl1 + sh1, pl2 + sh1
    )
    bank_builder bank2(
        shift: vee * 2,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh2, pl1 + sh2, pl2 + sh2
    )
    bank_builder bank3(
        shift: vee * 3 + rot360,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh3, pl1 + sh3, pl2 + sh3
    )
    bank_builder bank4(
        shift: vee * 4,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh4, pl1 + sh4, pl2 + sh4
    )
    bank_builder bank5(
        shift: vee * 5 + rot360,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh5, pl1 + sh5, pl2 + sh5
    )
    bank_builder bank6(
        shift: vee * 6,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust,
        rj0: rj0,
        rj1: rj1,
        rj2: rj2,
        pl0 + sh6, pl1 + sh6, pl2 + sh6
    )

    ignition_module ignition(timing_curve: timing_curve, rev_limit: 10000 * units.rpm, limiter_duration: 0.001)
    
    rod_journal rj0(angle: rot_base * 0 + rot90)
    rod_journal rj1(angle: rot_base * 2 + rot90)
    rod_journal rj2(angle: rot_base * 1 + rot90)
    
    c0
        .add_rod_journal(rj0)
        .add_rod_journal(rj1)
        .add_rod_journal(rj2)

    label collector_cross_section_area(21.690 * 7.0) // cm2

    label exhaust_pipe_length_0(300.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres
    
    label spacing_factor(1.15)
    label flange_density(1.5 * exhaust_delay_coeff)
    label radial_density(5.0 * exhaust_delay_coeff)
    

    intake intake(
        plenum_volume: 12.760 * units.L, // port_flow.py v0.5
        plenum_cross_section_area: 189.834 * units.cm2, // port_flow.py v0.5
        runner_length: 12.090 * units.cm, // port_flow.py v0.5
        intake_flow_rate: k_carb(intake_cfm),
        idle_flow_rate: k_carb(0.03),
        idle_throttle_plate_position: 0.995,
        runner_flow_rate: k_carb(intake_cfm / (cyl / 2.0)),
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(exhaust_cfm),
        collector_cross_section_area: collector_cross_section_area * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 41.929 * units.cm, // port_flow.py v0.5
        primary_flow_rate: k_carb(exhaust_cfm / (cyl / 2.0)),
        velocity_decay: 1.0,
        volume: exhaust_volume_0 * units.L
    )

    exhaust_system exhaust(es_params0, impulse_response: ir_lib.default_0, audio_volume: 10.0)

    label sh0 ((1.0 * bore * spacing_factor / radial_density) * units.mm)
    label sh1 ((4.0 * bore * spacing_factor / radial_density) * units.mm)
    label sh2 ((7.0 * bore * spacing_factor / radial_density) * units.mm)
    label sh3 ((10.0 * bore * spacing_factor / radial_density) * units.mm)
    label sh4 ((8.0 * bore * spacing_factor / radial_density) * units.mm)
    label sh5 ((5.0 * bore * spacing_factor / radial_density) * units.mm)
    label sh6 ((2.0 * bore * spacing_factor / radial_density) * units.mm)
    
    label pl0 ((1.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl1 ((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl2 ((3.0 * bore * spacing_factor / flange_density) * units.mm)

    engine
        .add_cylinder_bank(bank0.b0)
        .add_cylinder_bank(bank1.b0)
        .add_cylinder_bank(bank2.b0)
        .add_cylinder_bank(bank3.b0)
        .add_cylinder_bank(bank4.b0)
        .add_cylinder_bank(bank5.b0)
        .add_cylinder_bank(bank6.b0)

        .add_crankshaft(c0)
        .add_ignition_module(ignition)

    // ignition_timing.py v0.2 a = 7.0, m = 1.2, r = 7500
    function timing_curve(750.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(750.0 * units.rpm, 7.0 * units.deg)
        .add_sample(1500.0 * units.rpm, 8.4 * units.deg)
        .add_sample(2250.0 * units.rpm, 10.1 * units.deg)
        .add_sample(3000.0 * units.rpm, 12.1 * units.deg)
        .add_sample(3750.0 * units.rpm, 14.5 * units.deg)
        .add_sample(4500.0 * units.rpm, 17.4 * units.deg)
        .add_sample(5250.0 * units.rpm, 20.9 * units.deg)
        .add_sample(6000.0 * units.rpm, 25.1 * units.deg)
        .add_sample(6750.0 * units.rpm, 30.1 * units.deg)
        .add_sample(7500.0 * units.rpm, 36.1 * units.deg)
        .add_sample(8250.0 * units.rpm, -15.0 * units.deg)
        .add_sample(9000.0 * units.rpm, -60.0 * units.deg)
}

// 993
public node veh {
    alias output __out: vehicle;
    vehicle vehicle(
        mass: 1270  * units.kg,
        drag_coefficient: 0.32,
        cross_sectional_area: (1735  * units.mm) * (1311 * units.mm),
        diff_ratio: 3.444,
        tire_radius: (632.0 / 2) * units.mm, // 225/50ZR16
        rolling_resistance: 20
        )
}

// 993
private node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 10 * units.deg,
            limit_clutch_flex: true,
            clutch_stiffness: 20 * units.Nm / units.deg,
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.82)
        .add_gear(2.05)
        .add_gear(1.41)
        .add_gear(1.12)
        .add_gear(0.93)
        .add_gear(0.78);
}

run(
    engine: eng(),
    transmission: trn(),
    vehicle: veh()
)
