units units()
constants constants()

label bore(69.85) // 2 3/4
label stroke(107.95) // 4 1/4
label compression_ratio(5.25)
label con_rod(215.9) // 8 1/2
label compression_height(49.2125 * units.mm) // 1 15/16
label intake_valve_diameter(37.3062) // 1 15/32
label exhaust_valve_diameter(34.1313) // 1 11/32
label intake_valves(1.0)
label exhaust_valves(1.0)

label cyl(8.0)
label row(1.0)
label cycle(720.0 * units.deg)
label rot(cycle / cyl)
label cyl_base(cyl / row)
label rot_base(cycle / cyl_base)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)

label redline(3400.0) // RPM

// 1928 68
label IVL(8.33437) // 21/64
label EVL(8.33437) // 21/64
label IVO(6.0 * units.deg) //BTDC
label IVC(40.0 * units.deg) //ABDC
label EVO(40.0 * units.deg) //BBDC
label EVC(6.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label con_rod_mass(793.787) // 28
label piston_mass(411.068) // 14 1/2
label crank_mass(22.0) // ?
label flywheel_mass(5.0) // kg

label exhaust_delay_coeff(1.5)

