import "_fuel_30.mr"

units units()
constants constants()

label bore(88.9) // 3 1/2
label stroke(127.0) // 5
label compression_ratio(5.07)
label con_rod(228.6) // 9
label compression_height(61.1187 * units.mm) // 2 13/32
label intake_valve_diameter(42.0687) // 1 21/32
label exhaust_valve_diameter(39.6875) // 1 9/16
label intake_valves(1.0)
label exhaust_valves(1.0)

label cyl(8.0)
label row(1.0)
label cycle(720.0 * units.deg)
label rot(cycle / cyl)
label cyl_base(cyl / row)
label rot_base(cycle / cyl_base)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)

label redline(3200.0) // RPM

// 1930 PA
label IVL(9.1186) // .359
label EVL(9.1186) // .359
label IVO(-5.0 * units.deg) //BTDC
label IVC(45.0 * units.deg) //ABDC
label EVO(40.3 * units.deg) //BBDC
label EVC(12.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label con_rod_mass(1073.74) // 37 7/8
label piston_mass(832.767) // 29 3/8
label crank_mass(28.0) // kg
label flywheel_mass(7.0) // kg

label exhaust_delay_coeff(1.5)

