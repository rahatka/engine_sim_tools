public node distributor_0 {
    input wires;
    input timing_curve;
    input rev_limit: 3750 * units.rpm;
    input limiter_duration: 0.0001;
    alias output __out:
        ignition_module(timing_curve: timing_curve, rev_limit: rev_limit, limiter_duration: limiter_duration)
            .connect_wire(wires.wire1, rot * 0 - phase_shift)
            .connect_wire(wires.wire8, rot * 1 + phase_shift)
            .connect_wire(wires.wire3, rot * 2 - phase_shift)
            .connect_wire(wires.wire6, rot * 3 + phase_shift)
            .connect_wire(wires.wire7, rot * 4 - phase_shift)
            .connect_wire(wires.wire2, rot * 5 + phase_shift)
            .connect_wire(wires.wire5, rot * 6 - phase_shift)
            .connect_wire(wires.wire4, rot * 7 + phase_shift);
}

