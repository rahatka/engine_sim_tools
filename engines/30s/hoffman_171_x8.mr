    camshaft _exhaust_cam_3(base_radius: 13.9 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0
        .add_lobe(ILC + 0 * rot - phase_shift) // 1
        .add_lobe(ILC + 6 * rot - phase_shift) // 5
    _exhaust_cam_0
        .add_lobe(ELC + 0 * rot - phase_shift) // 1
        .add_lobe(ELC + 6 * rot - phase_shift) // 5
        
