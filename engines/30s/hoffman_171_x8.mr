        .add_lobe(ELC + 4 * rot - phase_shift) // 7
        
    _intake_cam_3
        .add_lobe(ILC + 7 * rot + phase_shift) // 4
        .add_lobe(ILC + 1 * rot + phase_shift) // 8
    _exhaust_cam_3
        .add_lobe(ELC + 7 * rot + phase_shift) // 4
        .add_lobe(ELC + 1 * rot + phase_shift) // 8
}

