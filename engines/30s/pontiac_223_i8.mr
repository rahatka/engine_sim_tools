units units()
constants constants()

label bore(80.9625) // 3 3/16
label stroke(88.9) // 3 1/2
label compression_ratio(5.7) // 6.2 1934
label con_rod(195.2625) // 7 11/16
label compression_height(98.552 / 2 * units.mm) // 3.88 length
label intake_valve_diameter(35.7188) // 1 13/32
label exhaust_valve_diameter(34.1313) // 1 11/32
label intake_valves(1.0)
label exhaust_valves(1.0)

label cyl(8.0)
label row(1.0)
label cycle(720.0 * units.deg)
label rot(cycle / cyl)
label cyl_base(cyl / row)
label rot_base(cycle / cyl_base)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)

label redline(3800.0) // RPM

// Pontiac 601
label IVL(7.54062) // 19/64
label EVL(7.54062) // 19/64
label IVO(5.0 * units.deg) //BTDC
label IVC(39.0 * units.deg) //ABDC
label EVO(45.0 * units.deg) //BBDC
label EVC(5.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label con_rod_mass(893.01) // g 31 1/2 oz
label piston_mass(758.35) // g 26 3/4 oz
label crank_mass(25.0) // kg ?
label flywheel_mass(7.0) // kg

label exhaust_delay_coeff(1.5)

