// ЗИС-101
public node veh {
    alias output __out: vehicle;

    label car_mass(2700) // 2500 empty; 3000 full ?

    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.42,
        cross_sectional_area: (1892 * units.mm) * (1856 * units.mm),
        diff_ratio: 4.45,
        tire_radius: (868.68 / 2) * units.mm, // 7.50 x 17
        rolling_resistance: 0.012 * car_mass * 9.81
        )
}

// ЗИС-101
private node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 500 * units.Nm,
            max_clutch_flex: 20 * units.deg,
            limit_clutch_flex: true,
            clutch_stiffness: 20 * units.Nm / units.deg,
            clutch_damping: 1.0,
            simulate_flex: true
        )
        .add_gear(2.89)
        .add_gear(1.75)
        .add_gear(1.0);
}

run(
    engine: eng(),
    transmission: trn(),
    vehicle: veh()
)
