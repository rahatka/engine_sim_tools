import "engine_sim.mr"
import "../../fuel/30.mr"

units units()
constants constants()

label bore(80.9625) // 3 3/16
label stroke(127.0) // 5
label compression_ratio(6.5) // also 6.0 7.0
label con_rod(276.225) // 10 7/8
label compression_height(60.0 * units.mm) // ?
label intake_valve_diameter(42.0687) // 1 21/32
label exhaust_valve_diameter(37.3062) // 1 15/32
label intake_valves(1.0)
label exhaust_valves(1.0)

label cyl(8.0)
label row(1.0)
label cycle(720.0 * units.deg)
label rot(cycle / cyl)
label cyl_base(cyl / row)
label rot_base(cycle / cyl_base)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)

label redline(3400.0) // RPM

// Packard 320
label IVL(9.0932) // .358
label EVL(9.0932) // .358
label IVO(30.0 * units.deg) //BTDC
label IVC(65.0 * units.deg) //ABDC
label EVO(65.0 * units.deg) //BBDC
label EVC(30.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label con_rod_mass(1135.75) // g 2 lbs 8 1/16 oz
label piston_mass(530.1361) // g 18.7 oz
label crank_mass(44.22) // kg 97 1/2 lbs
label flywheel_mass(5.0) // kg

label exhaust_delay_coeff(1.5)

