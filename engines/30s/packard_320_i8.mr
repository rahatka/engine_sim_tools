public node head {
    // port_flow.py v1.5
    // intake port area: 9.9 cm²; saturated lift: 8.62 mm
    // exhaust port area: 7.8 cm²; saturated lift: 7.65 mm
    // cylinder volume: 653.8 cm³ (39.9 CI); engine volume: 5.231 L (319.2 CI)
    // chamber volume: 118.9 cm³ (7.3 CI)
    // 16 harmonic intake runner length: 22.0 cm; diameter: 3.8 cm
    // primary length: 40.0 cm, area: 8.5 cm², diameter: 3.3 cm
    // collector diameter: 5.1 cm, area: 20.5 cm²

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    generic_cylinder_head head(
        chamber_volume: 118.877 * units.cc,
        intake_runner_volume: 244.3 * units.cc,
        intake_runner_cross_section_area: 11.1 * units.cm2,
        exhaust_runner_volume: 81.4 * units.cc,
        exhaust_runner_cross_section_area: 8.5 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        valvetrain: standard_valvetrain(
            intake_camshaft: intake_camshaft,
            exhaust_camshaft: exhaust_camshaft
        ),
        flip_display: flip_display
    )
}

public node crank {
    input phasing;
    input var;

    output c: _c;
    output rj0: _rj0;
    output rj1: _rj1;
    output rj2: _rj2;
    output rj3: _rj3;
    output rj4: _rj4;
    output rj5: _rj5;
    output rj6: _rj6;
    output rj7: _rj7;

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 3.5) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft _c(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 7.8 * units.Nm,
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        tdc: 0.0
    )

    rod_journal _rj0(angle: rot_base * var.s1 + rot90)
    rod_journal _rj1(angle: rot_base * var.s2 + rot90)
    rod_journal _rj2(angle: rot_base * var.s3 + rot90)
    rod_journal _rj3(angle: rot_base * var.s4 + rot90)
    rod_journal _rj4(angle: rot_base * var.s5 + rot90)
    rod_journal _rj5(angle: rot_base * var.s6 + rot90)
    rod_journal _rj6(angle: rot_base * var.s7 + rot90)
    rod_journal _rj7(angle: rot_base * var.s8 + rot90)

    _c
        .add_rod_journal(_rj0)
        .add_rod_journal(_rj1)
        .add_rod_journal(_rj2)
        .add_rod_journal(_rj3)
        .add_rod_journal(_rj4)
        .add_rod_journal(_rj5)
        .add_rod_journal(_rj6)
        .add_rod_journal(_rj7)
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "Packard 320",
        starter_torque: 100 * units.Nm,
        starter_speed: 300 * units.rpm,
        redline: redline * units.rpm,
        fuel: s30(),
        throttle_gamma: 1.5,
        jitter: es.jitter,
        noise: es.noise,
        hf_gain: es.hf_gain,
        simulation_frequency: 12000,
        dyno_min_speed: 500 * units.rpm
    )

    variant_0 variant()

    crank c0(rot90, variant)

    bank_builder bank0(
        var: variant,
        crankshaft: c0,
        incline: 0,
        phasing: 0,
        ignition: ignition,
        intake: intake,
        exhaust: es,
        flip: true
    )

    ignition_module ignition(timing_curve: timing_curve, rev_limit: redline * 1.05 * units.rpm, limiter_duration: 0.03)

    intake intake(
        plenum_volume: 3.0 * units.L,
        plenum_cross_section_area: 44.4 * units.cm2,
        runner_length: 22.0 * units.cm,
        intake_flow_rate: k_carb(296.4),
        idle_flow_rate: k_carb(0.01),
        idle_throttle_plate_position: 0.994,
        runner_flow_rate: k_carb(74.1),
        velocity_decay: 0.05
    )

    es0 es()

    // ignition_timing.py v0.2 a = 5.0, m = 1.19, r = 3600
    function timing_curve(360.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(360.0 * units.rpm, 5.0 * units.deg)
        .add_sample(720.0 * units.rpm, 5.9 * units.deg)
        .add_sample(1080.0 * units.rpm, 7.1 * units.deg)
        .add_sample(1440.0 * units.rpm, 8.4 * units.deg)
        .add_sample(1800.0 * units.rpm, 10.0 * units.deg)
        .add_sample(2160.0 * units.rpm, 11.9 * units.deg)
        .add_sample(2520.0 * units.rpm, 14.2 * units.deg)
        .add_sample(2880.0 * units.rpm, 16.9 * units.deg)
        .add_sample(3240.0 * units.rpm, 20.1 * units.deg)
        .add_sample(3600.0 * units.rpm, 23.9 * units.deg)
        .add_sample(3960.0 * units.rpm, -15.0 * units.deg)
        .add_sample(4320.0 * units.rpm, -60.0 * units.deg)

    engine
        .add_crankshaft(c0.c)
        .add_cylinder_bank(bank0.bank)
        .add_ignition_module(ignition)
}

