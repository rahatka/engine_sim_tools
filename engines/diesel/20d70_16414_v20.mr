public node eng {
    alias output __out: engine;

    engine engine(
        name: "20D70",
        starter_torque: 6000 * units.Nm,
        starter_speed: 50 * units.rpm,
        redline: redline * units.rpm,
        fuel: diesel(),
        throttle_gamma: 1.5,
        jitter: 0.6,
        noise: 0.06,
        hf_gain: 0.006,
        simulation_frequency: 6500,
        fluid_simulation_steps: 6,
        max_sle_solver_steps: 32,
        dyno_min_speed: 500 * units.rpm
    )

    variant_0 variant()

    crank c0(vee / 2 + rot90, variant)
    rods r(c0)

    ignition_module ignition(timing_curve: timing_curve, rev_limit: redline * 1.5 * units.rpm, limiter_duration: 0.05)

    bank_builder bank0(
        var: variant,
        rods: r0(r),
        incline: vee / 2,
        phasing: 0,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust0,
        flip: true
    )

    bank_builder bank1(
        var: variant,
        rods: r1(r),
        incline: -vee / 2,
        phasing: vee + rot360,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust0
    )

    label collector_cross_section_area(760.6)

    label exhaust_pipe_length_0(300.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres

    intake intake(
        plenum_volume: 39.8 * units.L,
        plenum_cross_section_area: 615.5 * units.cm2,
        runner_length: 40.4 * units.cm,
        intake_flow_rate: k_carb(4638.8),
        idle_flow_rate: k_carb(0.005),
        idle_throttle_plate_position: 0.994,
        runner_flow_rate: k_carb(463.9),
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(7731.3),
        collector_cross_section_area: 760.6 * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 143.4 * units.cm,
        primary_flow_rate: k_carb(773.1),
        velocity_decay: 0.9,
        volume: (exhaust_volume_0 + 50) * units.L
    )

    exhaust_system exhaust0(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_56.wav", volume: 0.005))
  
    function timing_curve(70.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(70.0 * units.rpm, 0.0 * units.deg)
        .add_sample(140.0 * units.rpm, 4.2 * units.deg)
        .add_sample(210.0 * units.rpm, 8.8 * units.deg)
        .add_sample(280.0 * units.rpm, 12.4 * units.deg)
        .add_sample(350.0 * units.rpm, 15.3 * units.deg)
        .add_sample(420.0 * units.rpm, 17.5 * units.deg)
        .add_sample(490.0 * units.rpm, 19.3 * units.deg)
        .add_sample(560.0 * units.rpm, 20.7 * units.deg)
        .add_sample(630.0 * units.rpm, 21.8 * units.deg)
        .add_sample(700.0 * units.rpm, 22.7 * units.deg)
        .add_sample(770.0 * units.rpm, 23.4 * units.deg)
        .add_sample(840.0 * units.rpm, 24.0 * units.deg)
        .add_sample(910.0 * units.rpm, 24.4 * units.deg)
        .add_sample(980.0 * units.rpm, 24.7 * units.deg)
        .add_sample(1050.0 * units.rpm, 25.0 * units.deg)
        .add_sample(1120.0 * units.rpm, -15.0 * units.deg)
        .add_sample(1190.0 * units.rpm, -45.0 * units.deg)

    engine
        .add_crankshaft(c0.c)
        .add_cylinder_bank(bank0.bank)
        .add_cylinder_bank(bank1.bank)
        .add_ignition_module(ignition)
}

