public node camshaft_builder {
    output intake_cam_0: _intake_cam_0;
    output exhaust_cam_0: _exhaust_cam_0;

    camshaft _intake_cam_0(base_radius: 22.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: 22.0 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0
        .add_lobe(ILC + 0 * rot)
        .add_lobe(ILC + 2 * rot)
        .add_lobe(ILC + 4 * rot)
        .add_lobe(ILC + 6 * rot)
        .add_lobe(ILC + 1 * rot)
        .add_lobe(ILC + 3 * rot)
        .add_lobe(ILC + 5 * rot)
        .add_lobe(ILC + 7 * rot)

    _exhaust_cam_0
        .add_lobe(ELC + 0 * rot)
        .add_lobe(ELC + 2 * rot)
        .add_lobe(ELC + 4 * rot)
        .add_lobe(ELC + 6 * rot)
        .add_lobe(ELC + 1 * rot)
        .add_lobe(ELC + 3 * rot)
        .add_lobe(ELC + 5 * rot)
        .add_lobe(ELC + 7 * rot)
}

public node head {
    // port_flow.py v1.5
    // intake port area: 15.0 cm²; saturated lift: 7.52 mm
    // exhaust port area: 16.5 cm²; saturated lift: 11.17 mm
    // cylinder volume: 1595.3 cm³ (97.4 CI); engine volume: 12.763 L (778.8 CI)
    // chamber volume: 398.8 cm³ (24.3 CI)
    // 32 harmonic intake runner length: 25.8 cm; diameter: 4.1 cm
    // primary length: 92.6 cm, area: 18.2 cm², diameter: 4.8 cm
    // collector diameter: 8.1 cm, area: 50.9 cm²

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    generic_cylinder_head head(
        chamber_volume: 398.835 * units.cc,
        intake_runner_volume: 344.3 * units.cc,
        intake_runner_cross_section_area: 13.3 * units.cm2,
        exhaust_runner_volume: 127.5 * units.cc,
        exhaust_runner_cross_section_area: 18.2 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        valvetrain: standard_valvetrain(
            intake_camshaft: intake_camshaft,
            exhaust_camshaft: exhaust_camshaft
        ),
        flip_display: flip_display
    )
}

private node add_flow_sample {
    input lift;
    input flow;
    input this;
    alias output __out: this;

    this.add_sample(lift * units.mm, k_28inH2O(flow))
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "Bugatti Type 41",
        starter_torque: 200 * units.Nm,
        starter_speed: 150 * units.rpm,
        redline: redline * units.rpm,
        fuel: s10(),
        throttle_gamma: 2.0,
        jitter: 0.8,
        noise: 0.2,
        hf_gain: 0.002,
        simulation_frequency: 10000,
        dyno_min_speed: 300 * units.rpm
    )

    wires wires()

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 3.5) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft c0(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 19.1 * units.Nm,
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        tdc: 0.0
    )

    rod_journal rj0(angle: rot * 0 + rot90)
    rod_journal rj1(angle: rot * 2 + rot90)
    rod_journal rj2(angle: rot * 4 + rot90)
    rod_journal rj3(angle: rot * 6 + rot90)
    rod_journal rj4(angle: rot * 1 + rot90)
    rod_journal rj5(angle: rot * 3 + rot90)
    rod_journal rj6(angle: rot * 5 + rot90)
    rod_journal rj7(angle: rot * 7 + rot90)
    
    c0
        .add_rod_journal(rj0)
        .add_rod_journal(rj1)
        .add_rod_journal(rj2)
        .add_rod_journal(rj3)
        .add_rod_journal(rj4)
        .add_rod_journal(rj5)
        .add_rod_journal(rj6)
        .add_rod_journal(rj7)

    piston_parameters piston_params(
        mass: piston_mass * units.g,
        blowby: k_28inH2O(0.039),
        compression_height: compression_height,
        wrist_pin_position: 0.0,
        displacement: 0.0
    )

    connecting_rod_parameters cr_params(
        mass: con_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: con_rod_mass * units.g,
            length: con_rod * units.mm
        ),
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )

    label collector_cross_section_area(50.9)

    label exhaust_pipe_length_0(400.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres
    
    label spacing_factor(1.2)
    label flange_density(1.0 * exhaust_delay_coeff)

    intake intake(
        plenum_volume: 3.4 * units.L,
        plenum_cross_section_area: 53.3 * units.cm2,
        runner_length: 25.8 * units.cm,
        intake_flow_rate: k_carb(478.6),
        idle_flow_rate: k_carb(0.01),
        idle_throttle_plate_position: 0.9976,
        runner_flow_rate: k_carb(119.7),
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(797.7),
        collector_cross_section_area: 50.9 * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 92.6 * units.cm,
        primary_flow_rate: k_carb(199.4),
        velocity_decay: 1.0,
        volume: (exhaust_volume_0 + 10.0) * units.L
    )

    // default_0 real_engine_0 real_engine_1 real_engine_2 sharp_0 mild_exhaust_0 mild_exhaust_0_reverb
    // minimal_muffling_01 minimal_muffling_02 minimal_muffling_03
    exhaust_system exhaust0(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_56.wav", volume: 0.00025))
    
    // straight manifold
    // label pl0 ((8.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl1 ((7.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl2 ((6.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl3 ((5.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl4 ((4.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl5 ((3.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl6 ((2.0 * bore * spacing_factor / flange_density) * units.mm)
    // label pl7 ((1.0 * bore * spacing_factor / flange_density) * units.mm)
    
    // Coupe De Ville manifold
    label pl0 ((5.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl1 ((4.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl2 ((3.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl3 ((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl4 ((1.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl5 ((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl6 ((3.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl7 ((4.0 * bore * spacing_factor / flange_density) * units.mm)
 
    cylinder_bank b0(bank_params, angle: 0 * units.deg)
    b0
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj0,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl0,
            ignition_wire: wires.wire1
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj1,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl1,
            ignition_wire: wires.wire2
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj2,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl2,
            ignition_wire: wires.wire3
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj3,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl3,
            ignition_wire: wires.wire4
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj4,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl4,
            ignition_wire: wires.wire5
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj5,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl5,
            ignition_wire: wires.wire6
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj6,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl6,
            ignition_wire: wires.wire7
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj7,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl7,
            ignition_wire: wires.wire8
        )

    engine
        .add_cylinder_bank(b0)

    engine.add_crankshaft(c0)

    camshaft_builder camshaft()

    b0.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_0,
            exhaust_camshaft: camshaft.exhaust_cam_0
        )
    )

    function timing_curve(150.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 5.0 * units.deg)
        .add_sample(150.0 * units.rpm, 5.0 * units.deg)
        .add_sample(300.0 * units.rpm, 9.9 * units.deg)
        .add_sample(450.0 * units.rpm, 15.8 * units.deg)
        .add_sample(600.0 * units.rpm, 20.3 * units.deg)
        .add_sample(750.0 * units.rpm, 23.8 * units.deg)
        .add_sample(900.0 * units.rpm, 26.4 * units.deg)
        .add_sample(1050.0 * units.rpm, 28.5 * units.deg)
        .add_sample(1200.0 * units.rpm, 30.0 * units.deg)
        .add_sample(1350.0 * units.rpm, 30.0 * units.deg)
        .add_sample(1500.0 * units.rpm, 30.0 * units.deg)
        .add_sample(1650.0 * units.rpm, 30.0 * units.deg)
        .add_sample(1800.0 * units.rpm, 30.0 * units.deg)
        .add_sample(1950.0 * units.rpm, 30.0 * units.deg)
        .add_sample(2100.0 * units.rpm, 30.0 * units.deg)
        .add_sample(2250.0 * units.rpm, 30.0 * units.deg)
        .add_sample(2400.0 * units.rpm, -15.0 * units.deg)
        .add_sample(2550.0 * units.rpm, -45.0 * units.deg)

    engine.add_ignition_module(
        eng_distributor(
            wires: wires,
            timing_curve: timing_curve
        )
    )
}

// Bugatti Type 41
public node veh {
    alias output __out: vehicle;
    vehicle vehicle(
        mass: 3250  * units.kg,
        drag_coefficient: 0.5,
        cross_sectional_area: (1320 * units.mm) * (1050 * units.mm),
        diff_ratio: 3.6,
        tire_radius: (914.4 / 2) * units.mm, // 36 x 6.75
        rolling_resistance: 20
        )
}

// Bugatti Type 41
private node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 1300 * units.Nm,
            max_clutch_flex: 15 * units.deg,
            limit_clutch_flex: true,
            clutch_stiffness: 100 * units.Nm / units.deg,
            clutch_damping: 1.0,
            simulate_flex: true
        )
        .add_gear(7.50)
        .add_gear(1.0)
        .add_gear(0.37);
}

run(
    engine: eng(),
    transmission: trn(),
    vehicle: veh()
)
