import "../../fuel/10.mr"

units units()
constants constants()

label bore(88.9) // 3 1/2
label stroke(88.9) // 3 1/2
label compression_ratio(6.0) // later 7.0
label con_rod(161.925) // 6 3/8 ?
label compression_height(50.0 * units.mm) // ?
label intake_valve_diameter(44.45) // 1 3/4 ?
label exhaust_valve_diameter(41.275) // 1 5/8 ?
label intake_valves(1.0)
label exhaust_valves(1.0)

label redline(4000.0) // RPM

label cyl(16.0)
label row(4.0)
label cyl_base(cyl / row)
label cycle(720.0 * units.deg)
label separation(125.0* units.mm) // ~
label vee(180.0 * units.deg)
label rot_base(cycle / cyl_base)
label rot45(45.0 * units.deg)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)

// Napier Lion (@0.020")
label IVL(9.921) // 25/64 ?
label EVL(9.921) // 25/64 ?
label IVO(10.0 * units.deg) //BTDC
label IVC(51.25 * units.deg) //ABDC
label EVO(48.0 * units.deg) //BBDC
label EVC(10.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label con_rod_mass(900.0) // ? g
label piston_mass(700.0) // ? g
label crank_mass(30.0) // ? kg
label flywheel_mass(8.0) // kg

label exhaust_delay_coeff(1.5)

