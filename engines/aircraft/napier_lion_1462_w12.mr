public node eng_distributor {
    input wires;
    input timing_curve;
    input rev_limit: 4000 * units.rpm;
    input limiter_duration: 0.0001;
    alias output __out:
        ignition_module(timing_curve: timing_curve, rev_limit: rev_limit, limiter_duration: limiter_duration)
            .connect_wire(wires.wire1_0, rot * 0)
            .connect_wire(wires.wire3_0, rot * 3)
            .connect_wire(wires.wire4_0, rot * 6)
            .connect_wire(wires.wire2_0, rot * 9)

            .connect_wire(wires.wire1_1, rot * 0 + vee + rot360)
            .connect_wire(wires.wire3_1, rot * 3 + vee + rot360)
            .connect_wire(wires.wire4_1, rot * 6 + vee + rot360)
            .connect_wire(wires.wire2_1, rot * 9 + vee + rot360)

            .connect_wire(wires.wire1_2, rot * 0 + vee * 2)
            .connect_wire(wires.wire3_2, rot * 3 + vee * 2)
            .connect_wire(wires.wire4_2, rot * 6 + vee * 2)
            .connect_wire(wires.wire2_2, rot * 9 + vee * 2);
}

private node wires {
    output wire1_0: ignition_wire();
    output wire2_0: ignition_wire();
    output wire3_0: ignition_wire();
    output wire4_0: ignition_wire();
    
    output wire1_1: ignition_wire();
    output wire2_1: ignition_wire();
    output wire3_1: ignition_wire();
    output wire4_1: ignition_wire();
    
    output wire1_2: ignition_wire();
    output wire2_2: ignition_wire();
    output wire3_2: ignition_wire();
    output wire4_2: ignition_wire();
}

