private node add_lobes {
    input base;
    input shift: 0.0;
    input this;
    alias output __out: this;

    this.add_lobe(base + 0 * rot * row + shift)
    this.add_lobe(base + 3 * rot * row + shift)
    this.add_lobe(base + 1 * rot * row + shift)
    this.add_lobe(base + 2 * rot * row + shift)
}

public node camshaft_builder {
    output intake_cam_0: _intake_cam_0;
    output exhaust_cam_0: _exhaust_cam_0;

    output intake_cam_1: _intake_cam_1;
    output exhaust_cam_1: _exhaust_cam_1;
    
    output intake_cam_2: _intake_cam_2;
    output exhaust_cam_2: _exhaust_cam_2;

    camshaft _intake_cam_0(base_radius: 16.2 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: 16.2 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_1(base_radius: 16.2 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_1(base_radius: 16.2 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_2(base_radius: 16.2 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_2(base_radius: 16.2 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0.add_lobes(ILC)
    _exhaust_cam_0.add_lobes(ELC)

    _intake_cam_1.add_lobes(ILC, vee + rot360)
    _exhaust_cam_1.add_lobes(ELC, vee + rot360)

    _intake_cam_2.add_lobes(ILC, vee * 2)
    _exhaust_cam_2.add_lobes(ELC, vee * 2)
}

private node add_flow_sample {
    input lift;
    input flow;
    input this;
    alias output __out: this;

    this.add_sample(lift * units.mm, k_28inH2O(flow))
}

public node head {
    // port_flow.py v1.7
    // intake port area: 20.7 cm²; saturated lift: 8.66 mm
    // exhaust port area: 21.6 cm²; saturated lift: 8.89 mm
    // cylinder volume: 1995.3 cm³ (121.76 CI); engine volume: 23.944 L (1461.14 CI)
    // chamber volume: 415.7 cm³ (25.37 CI); conrod/stroke 1.917; N.A.C.C. 145.20
    // 32 harmonic intake runner length: 20.4 cm; diameter: 5.2 cm
    // primary length: 58.8 cm, area: 21.6 cm², diameter: 5.2 cm
    // collector diameter: 18.2 cm, area: 259.5 cm²

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    generic_cylinder_head head(
        chamber_volume: 415.689 * units.cc,
        intake_runner_volume: 433.4 * units.cc,
        intake_runner_cross_section_area: 21.2 * units.cm2,
        exhaust_runner_volume: 166.7 * units.cc,
        exhaust_runner_cross_section_area: 21.6 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        valvetrain: standard_valvetrain(
            intake_camshaft: intake_camshaft,
            exhaust_camshaft: exhaust_camshaft
        ),
        flip_display: flip_display
    )
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "Napier Lion V",
        starter_torque: 300 * units.Nm,
        starter_speed: 250 * units.rpm,
        redline: redline * units.rpm,
        fuel: a30(),
        throttle_gamma: 2.0,
        jitter: 0.8,
        noise: 0.2,
        hf_gain: 0.008,
        simulation_frequency: 6500,
        dyno_min_speed: 500 * units.rpm
    )

    wires wires()
    
    connecting_rod_parameters cr_params(
        mass: con_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: con_rod_mass * units.g,
            length: con_rod * units.mm
        ),
        slave_throw: R1 * units.mm,
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    label slave_rod_mass(500)
    connecting_rod_parameters slave_rod_params(
        mass: slave_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: slave_rod_mass * units.g,
            length: L1 * units.mm
        ),
        center_of_mass: 0.0,
        length: L1 * units.mm
    )

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 3.5) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft c0(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 35.9 * units.Nm,
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        tdc: 0.0
    )

    piston_parameters piston_params(
        mass: 1500 * units.g,
        blowby: k_28inH2O(0.044),
        compression_height: compression_height
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )
    
    rod_journal rj0(angle: rot * 6 + rot90 + vee)
    rod_journal rj1(angle: rot * 3 + rot90 + vee)
    rod_journal rj2(angle: rot * 9 + rot90 + vee)
    rod_journal rj3(angle: rot * 0 + rot90 + vee)
    
    rod_journal sj0_0(angle: vee)
    rod_journal sj0_1(angle: -vee)
    
    rod_journal sj1_0(angle: vee)
    rod_journal sj1_1(angle: -vee)
    
    rod_journal sj2_0(angle: vee)
    rod_journal sj2_1(angle: -vee)
    
    rod_journal sj3_0(angle: vee)
    rod_journal sj3_1(angle: -vee)
    
    connecting_rod mcr0(cr_params)
    connecting_rod mcr1(cr_params)
    connecting_rod mcr2(cr_params)
    connecting_rod mcr3(cr_params)
    
    mcr0
        .add_slave_journal(sj0_0)
        .add_slave_journal(sj0_1)
        
    mcr1
        .add_slave_journal(sj1_0)
        .add_slave_journal(sj1_1)
        
    mcr2
        .add_slave_journal(sj2_0)
        .add_slave_journal(sj2_1)
        
    mcr3
        .add_slave_journal(sj3_0)
        .add_slave_journal(sj3_1)
    
    c0
        .add_rod_journal(rj0)
        .add_rod_journal(rj1)
        .add_rod_journal(rj2)
        .add_rod_journal(rj3)

    label collector_cross_section_area(86.5)

    label exhaust_pipe_length_0(100.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres
    
    label spacing_factor(1.2)
    label flange_density(1.0 * exhaust_delay_coeff)

    intake intake(
        plenum_volume: 7.5 * units.L,
        plenum_cross_section_area: 127.2 * units.cm2,
        runner_length: 20.4 * units.cm,
        intake_flow_rate: k_carb(1042.5),
        idle_flow_rate: k_carb(0.03),
        idle_throttle_plate_position: 0.997,
        runner_flow_rate: k_carb(173.8),
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(564.7),
        collector_cross_section_area: 86.5 * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 58.8 * units.cm,
        primary_flow_rate: k_carb(282.4),
        velocity_decay: 0.75,
        volume: exhaust_volume_0 * units.L
    )

    exhaust_system exhaust0(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_45.wav", volume: 0.0015))
    exhaust_system exhaust1(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_45.wav", volume: 0.0012))
    exhaust_system exhaust2(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_52.wav", volume: 0.0010))

    cylinder_bank b0(bank_params, angle: vee)
    cylinder_bank b1(bank_params, angle: 0 * units.deg)
    cylinder_bank b2(bank_params, angle: -vee)
    
    label pl0 ((4.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl1 ((3.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl2 ((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl3 ((1.0 * bore * spacing_factor / flange_density) * units.mm)

    b0
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj0_0,  
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl0,
            ignition_wire: wires.wire1_0
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj1_0, 
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl1,
            ignition_wire: wires.wire2_0
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj2_0,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl2,
            ignition_wire: wires.wire3_0
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj3_0,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: pl3,
            ignition_wire: wires.wire4_0
        )
        
    b1
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: mcr0,
            rod_journal: rj0,
            intake: intake,
            exhaust_system: exhaust1,
            primary_length: pl0,
            ignition_wire: wires.wire1_1
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: mcr1,
            rod_journal: rj1,
            intake: intake,
            exhaust_system: exhaust1,
            primary_length: pl1,
            ignition_wire: wires.wire2_1
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: mcr2,
            rod_journal: rj2,
            intake: intake,
            exhaust_system: exhaust1,
            primary_length: pl2,
            ignition_wire: wires.wire3_1
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: mcr3,
            rod_journal: rj3,
            intake: intake,
            exhaust_system: exhaust1,
            primary_length: pl3,
            ignition_wire: wires.wire4_1
        )
        
    b2
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj0_1,
            intake: intake,
            exhaust_system: exhaust2,
            primary_length: pl0,
            ignition_wire: wires.wire1_2
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj1_1,
            intake: intake,
            exhaust_system: exhaust2,
            primary_length: pl1,
            ignition_wire: wires.wire2_2
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj2_1,
            intake: intake,
            exhaust_system: exhaust2,
            primary_length: pl2,
            ignition_wire: wires.wire3_2
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(slave_rod_params),
            rod_journal: sj3_1,
            intake: intake,
            exhaust_system: exhaust2,
            primary_length: pl3,
            ignition_wire: wires.wire4_2
        )

    engine
        .add_cylinder_bank(b0)
        .add_cylinder_bank(b1)
        .add_cylinder_bank(b2)

    engine.add_crankshaft(c0)

    camshaft_builder camshaft()

    b0.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_0,
            exhaust_camshaft: camshaft.exhaust_cam_0,
            flip_display: true
        )
    )
    
    b1.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_1,
            exhaust_camshaft: camshaft.exhaust_cam_1
        )
    )
    
    b2.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_2,
            exhaust_camshaft: camshaft.exhaust_cam_2
        )
    )

    function timing_curve(183.3 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 4.0 * units.deg)
        .add_sample(183.3 * units.rpm, 4.0 * units.deg)
        .add_sample(366.7 * units.rpm, 4.0 * units.deg)
        .add_sample(550.0 * units.rpm, 5.4 * units.deg)
        .add_sample(733.3 * units.rpm, 7.1 * units.deg)
        .add_sample(916.7 * units.rpm, 8.8 * units.deg)
        .add_sample(1100.0 * units.rpm, 10.6 * units.deg)
        .add_sample(1283.3 * units.rpm, 12.3 * units.deg)
        .add_sample(1466.7 * units.rpm, 14.0 * units.deg)
        .add_sample(1650.0 * units.rpm, 15.7 * units.deg)
        .add_sample(1833.3 * units.rpm, 17.4 * units.deg)
        .add_sample(2016.7 * units.rpm, 19.1 * units.deg)
        .add_sample(2200.0 * units.rpm, 20.9 * units.deg)
        .add_sample(2383.3 * units.rpm, 22.6 * units.deg)
        .add_sample(2566.7 * units.rpm, 24.3 * units.deg)
        .add_sample(2750.0 * units.rpm, 26.0 * units.deg)
        .add_sample(2933.3 * units.rpm, -15.0 * units.deg)
        .add_sample(3116.7 * units.rpm, -60.0 * units.deg)

    engine.add_ignition_module(
        eng_distributor(
            wires: wires,
            timing_curve: timing_curve
        )
    )
}

// Pz V
public node veh {
    alias output __out: vehicle;

    label car_mass(45000) // 45.0 t panther

    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.6,
        cross_sectional_area: (2830 * units.mm) * (2680 * units.mm),
        diff_ratio: 2.5 * 3,
        tire_radius: (821.77 / 2) * units.mm,
        rolling_resistance: 0.06 * car_mass * 9.81
        )
}

// Pz V
private node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 2500 * units.Nm,
            max_clutch_flex: 15 * units.deg,
            limit_clutch_flex: true,
            clutch_stiffness: 50 * units.Nm / units.deg,
            clutch_damping: 1.0,
            simulate_flex: true
        )
        .add_gear(10.8)  // 3.7 @ 2600
        .add_gear(5.26)  // 7.6
        .add_gear(3.33)  // 12.0
        .add_gear(2.13)  // 18.8
        .add_gear(1.48)  // 27.0
        .add_gear(1.06)  // 37.7
        .add_gear(0.85); // 47.3
}

run(
    engine: eng(),
    transmission: trn(),
    vehicle: veh()
)
