private node add_lobes {
    input base;
    input phasing: 0.0;
    input this;
    alias output __out: this;

    this.add_lobe(base + 0 * rot_base + phasing)
    this.add_lobe(base + 2 * rot_base + phasing)
    this.add_lobe(base + 4 * rot_base + phasing)
    this.add_lobe(base + 1 * rot_base + phasing)
    this.add_lobe(base + 5 * rot_base + phasing)
    this.add_lobe(base + 3 * rot_base + phasing)
}

public node bank_builder {
    input incline;
    input phasing;
    input crankshaft;
    input ignition;
    input intake;
    input exhaust;
    input x;
    input y;
    input flip: false;

    output b: _b;

    ignition_wire _wire1()
    ignition_wire _wire2()
    ignition_wire _wire3()
    ignition_wire _wire4()
    ignition_wire _wire5()
    ignition_wire _wire6()

    piston_parameters piston_params(
        mass: 2000 * units.g,
        blowby: k_28inH2O(0.042),
        compression_height: compression_height,
        wrist_pin_position: 0.0,
        displacement: 0.0
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )

    connecting_rod_parameters cr_params(
        mass: con_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: con_rod_mass * units.g,
            length: con_rod * units.mm
        ),
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    camshaft _intake_cam_0(base_radius: 25.4 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: 25.4 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0.add_lobes(ILC, phasing)
    _exhaust_cam_0.add_lobes(ELC, phasing)

    ignition
        .connect_wire(_wire1, rot_base * 0 + phasing)
        .connect_wire(_wire4, rot_base * 1 + phasing)
        .connect_wire(_wire2, rot_base * 2 + phasing)
        .connect_wire(_wire6, rot_base * 3 + phasing)
        .connect_wire(_wire3, rot_base * 4 + phasing)
        .connect_wire(_wire5, rot_base * 5 + phasing)

    cylinder_bank _b(bank_params, angle: incline, position_x: x, position_y: y)

    label spacing_factor(1.1)
    label flange_density(2.0 * exhaust_delay_coeff)
    label pl0 ((6.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl1 ((5.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl2 ((4.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl3 ((3.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl4 ((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl5 ((1.0 * bore * spacing_factor / flange_density) * units.mm)

    _b.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: crankshaft.rj0,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl0,
            ignition_wire: _wire1
        )
    .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: crankshaft.rj1,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl1,
            ignition_wire: _wire2
        )
    .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: crankshaft.rj2,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl2,
            ignition_wire: _wire3
        )
    .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: crankshaft.rj3,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl3,
            ignition_wire: _wire4
        )
    .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: crankshaft.rj4,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl4,
            ignition_wire: _wire5
        )
    .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: crankshaft.rj5,
            intake: intake,
            exhaust_system: exhaust,
            primary_length: pl5,
            ignition_wire: _wire6
        )
    .set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_0,
            exhaust_camshaft: _exhaust_cam_0,
            flip_display: flip
        )
    )
}

public node crank {
    input phasing;
    input x;
    input y;

    output c: _c;
    output rj0: _rj0;
    output rj1: _rj1;
    output rj2: _rj2;
    output rj3: _rj3;
    output rj4: _rj4;
    output rj5: _rj5;

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 3.5) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft _c(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 30.4 * units.Nm,
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        position_x: x,
        position_y: y,
        tdc: 0.0
    )

    rod_journal _rj0(angle: rot_base * 0 + phasing)
    rod_journal _rj1(angle: rot_base * 2 + phasing)
    rod_journal _rj2(angle: rot_base * 4 + phasing)
    rod_journal _rj3(angle: rot_base * 1 + phasing)
    rod_journal _rj4(angle: rot_base * 5 + phasing)
    rod_journal _rj5(angle: rot_base * 3 + phasing)

    _c
        .add_rod_journal(_rj0)
        .add_rod_journal(_rj1)
        .add_rod_journal(_rj2)
        .add_rod_journal(_rj3)
        .add_rod_journal(_rj4)
        .add_rod_journal(_rj5)
}

public node head {
    // port_flow.py v1.5
    // intake port area: 25.0 cm²; saturated lift: 13.74 mm
    // exhaust port area: 20.5 cm²; saturated lift: 12.45 mm
    // cylinder volume: 1687.0 cm³ (102.9 CI); engine volume: 40.487 L (2470.7 CI)
    // chamber volume: 306.7 cm³ (18.7 CI)
    // 16 harmonic intake runner length: 27.4 cm; diameter: 5.8 cm
    // primary length: 47.2 cm, area: 22.5 cm², diameter: 5.4 cm
    // collector diameter: 20.3 cm, area: 324.4 cm²

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    generic_cylinder_head head(
        chamber_volume: 306.723 * units.cc,
        intake_runner_volume: 736.0 * units.cc,
        intake_runner_cross_section_area: 26.9 * units.cm2,
        exhaust_runner_volume: 294.4 * units.cc,
        exhaust_runner_cross_section_area: 22.5 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        valvetrain: standard_valvetrain(
            intake_camshaft: intake_camshaft,
            exhaust_camshaft: exhaust_camshaft
        ),
        flip_display: flip_display
    )
}

private node add_flow_sample {
    input lift;
    input flow;
    input this;
    alias output __out: this;

    this.add_sample(lift * units.mm, k_28inH2O(flow))
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "Lycoming XH-2470",
        starter_torque: 700 * units.Nm,
        starter_speed: 500 * units.rpm,
        redline: redline * units.rpm,
        fuel: a30(),
        throttle_gamma: 1.5,
        jitter: 0.7,
        noise: 0.1,
        hf_gain: 0.007,
        fluid_simulation_steps: 6,
        max_sle_solver_steps: 16,
        simulation_frequency: 4500,
        dyno_min_speed: 500 * units.rpm
    )

    crank c0(vee / 2, -separation, 0)
    crank c1(vee / 2 + sb_shift, separation, 0)

    ignition_module ignition(timing_curve: timing_curve, rev_limit: redline * 1.1 * units.rpm, limiter_duration: 0.001)

    bank_builder bank0(
        incline: 0,
        phasing: 0,
        crankshaft: c0,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust0,
        x: -separation,
        y: 0,
        flip: true
    )

    bank_builder bank1(
        incline: vee,
        phasing: vee,
        crankshaft: c0,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust0,
        x: -separation,
        y: 0
    )

    bank_builder bank2(
        incline: 0,
        phasing: sb_shift,
        crankshaft: c1,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust1,
        x: separation,
        y: 0
    )

    bank_builder bank3(
        incline: vee,
        phasing: sb_shift + vee,
        crankshaft: c1,
        ignition: ignition,
        intake: intake,
        exhaust: exhaust1,
        x: separation,
        y: 0,
        flip: true
    )

    label collector_cross_section_area(162.2)

    label exhaust_pipe_length_0(150.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres
    
    label exhaust_pipe_length_1(150.0) // cm
    label exhaust_volume_1(collector_cross_section_area * exhaust_pipe_length_1 / 100.0) // Litres


    intake intake(
        plenum_volume: 22.5 * units.L,
        plenum_cross_section_area: 322.5 * units.cm2,
        runner_length: 27.4 * units.cm,
        intake_flow_rate: k_carb(2657.0),
        idle_flow_rate: k_carb(0.02),
        idle_throttle_plate_position: 0.994,
        runner_flow_rate: k_carb(249.1),
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(2352.5),
        collector_cross_section_area: 162.2 * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 47.2 * units.cm,
        primary_flow_rate: k_carb(416.6),
        velocity_decay: 1.0,
        volume: exhaust_volume_0 * units.L
    )
    
    exhaust_system_parameters es_params1(
        outlet_flow_rate: k_carb(2352.5),
        collector_cross_section_area: 162.2 * units.cm2,
        length: exhaust_pipe_length_1 * units.cm,
        primary_tube_length: 47.2 * units.cm,
        primary_flow_rate: k_carb(416.6),
        velocity_decay: 1.0,
        volume: exhaust_volume_1 * units.L
    )

    exhaust_system exhaust0(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_14.wav", volume: 0.001))
    exhaust_system exhaust1(es_params1, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_40.wav", volume: 0.001))

    engine
        .add_crankshaft(c0.c)
        .add_crankshaft(c1.c)
        .add_cylinder_bank(bank0.b)
        .add_cylinder_bank(bank1.b)
        .add_cylinder_bank(bank2.b)
        .add_cylinder_bank(bank3.b)
        .add_ignition_module(ignition)

    // ignition_timing.py v0.3 from = 6.0, to = 30.0, i = 500, r = 3500
    function timing_curve(350.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(350.0 * units.rpm, 3.0 * units.deg)
        .add_sample(700.0 * units.rpm, 6.0 * units.deg)
        .add_sample(1050.0 * units.rpm, 11.5 * units.deg)
        .add_sample(1400.0 * units.rpm, 15.9 * units.deg)
        .add_sample(1750.0 * units.rpm, 19.6 * units.deg)
        .add_sample(2100.0 * units.rpm, 22.6 * units.deg)
        .add_sample(2450.0 * units.rpm, 25.0 * units.deg)
        .add_sample(2800.0 * units.rpm, 27.0 * units.deg)
        .add_sample(3150.0 * units.rpm, 28.7 * units.deg)
        .add_sample(3500.0 * units.rpm, 30.0 * units.deg)
        .add_sample(3850.0 * units.rpm, -15.0 * units.deg)
        .add_sample(4200.0 * units.rpm, -60.0 * units.deg)
}

