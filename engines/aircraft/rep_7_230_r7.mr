public node bank_builder {
    input shift;
    input ignition;
    input intake;

    input ex0;
    input ex1;
    input ex2;
    input ex3;
    input ex4;
    input ex5;
    input ex6;

    input pl0;
    input pl1;
    input pl2;
    input pl3;
    input pl4;
    input pl5;
    input pl6;

    output rj0: _rj0;
    output rj1: _rj1;

    output b0: _b0;
    output b1: _b1;
    output b2: _b2;
    output b3: _b3;
    output b4: _b4;
    output b5: _b5;
    output b6: _b6;

    ignition_wire _wire1()
    ignition_wire _wire2()
    ignition_wire _wire3()
    ignition_wire _wire4()
    ignition_wire _wire5()
    ignition_wire _wire6()
    ignition_wire _wire7()

    connecting_rod_parameters cr_params(
        mass: con_rod_mass * units.g,
        moment_of_inertia: rod_moment_of_inertia(
            mass: con_rod_mass * units.g,
            length: con_rod * units.mm
        ),
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    piston_parameters piston_params(
        mass: 1500 * units.g,
        blowby: k_28inH2O(0.027),
        compression_height: compression_height,
        wrist_pin_position: 0.0,
        displacement: 0.0
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )

    camshaft _intake_cam_0(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)

    camshaft _intake_cam_1(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_1(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_2(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_2(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_3(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_3(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_4(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_4(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_5(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_5(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_6(base_radius: 15.0 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_6(base_radius: 15.0 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0
        .add_lobe(ILC + 0 * rot_base + shift)
    _exhaust_cam_0
        .add_lobe(ELC + 0 * rot_base + shift)

    _intake_cam_1
        .add_lobe(ILC + 4 * rot_base + shift)
    _exhaust_cam_1
        .add_lobe(ELC + 4 * rot_base + shift)
    
    _intake_cam_2
        .add_lobe(ILC + 1 * rot_base + shift)
    _exhaust_cam_2
        .add_lobe(ELC + 1 * rot_base + shift)
    
    _intake_cam_3
        .add_lobe(ILC + 5 * rot_base + shift)
    _exhaust_cam_3
        .add_lobe(ELC + 5 * rot_base + shift)
    
    _intake_cam_4
        .add_lobe(ILC + 2 * rot_base + shift)
    _exhaust_cam_4
        .add_lobe(ELC + 2 * rot_base + shift)
        
    _intake_cam_5
        .add_lobe(ILC + 6 * rot_base + shift)
    _exhaust_cam_5
        .add_lobe(ELC + 6 * rot_base + shift)
        
    _intake_cam_6
        .add_lobe(ILC + 3 * rot_base + shift)
    _exhaust_cam_6
        .add_lobe(ELC + 3 * rot_base + shift)

    label first_offset(vee * 1.5)

    rod_journal _rj0(angle: shift / 2.0 + rot90 + first_offset)
    rod_journal _rj1(angle: shift / 2.0 + rot90 + rot180 + first_offset)

    cylinder_bank _b0(bank_params, angle: -vee * 0 - shift / 2.0 + first_offset)
    cylinder_bank _b1(bank_params, angle: -vee * 1 - shift / 2.0 + first_offset)
    cylinder_bank _b2(bank_params, angle: -vee * 2 - shift / 2.0 + first_offset)
    cylinder_bank _b3(bank_params, angle: -vee * 3 - shift / 2.0 + first_offset)
    cylinder_bank _b4(bank_params, angle: -vee * 4 - shift / 2.0 + rot180 + first_offset)
    cylinder_bank _b5(bank_params, angle: -vee * 5 - shift / 2.0 + rot180 + first_offset)
    cylinder_bank _b6(bank_params, angle: -vee * 6 - shift / 2.0 + rot180 + first_offset)

    _b0.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj0,
            intake: intake,
            exhaust_system: ex0,
            primary_length: pl0,
            ignition_wire: _wire1
        )
    _b1.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj0,
            intake: intake,
            exhaust_system: ex1,
            primary_length: pl1,
            ignition_wire: _wire2
        )
    _b2.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj0,
            intake: intake,
            exhaust_system: ex2,
            primary_length: pl2,
            ignition_wire: _wire3
        )
    _b3.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj0,
            intake: intake,
            exhaust_system: ex3,
            primary_length: pl3,
            ignition_wire: _wire4
        )
    _b4.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj1,
            intake: intake,
            exhaust_system: ex4,
            primary_length: pl4,
            ignition_wire: _wire5
        )
    _b5.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj1,
            intake: intake,
            exhaust_system: ex5,
            primary_length: pl5,
            ignition_wire: _wire6
        )
    _b6.add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: _rj1,
            intake: intake,
            exhaust_system: ex6,
            primary_length: pl6,
            ignition_wire: _wire7
        )

    _b0.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_0,
            exhaust_camshaft: _exhaust_cam_0
        )
    )
    _b1.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_1,
            exhaust_camshaft: _exhaust_cam_1
        )
    )
    _b2.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_2,
            exhaust_camshaft: _exhaust_cam_2
        )
    )
    _b3.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_3,
            exhaust_camshaft: _exhaust_cam_3
        )
    )
    _b4.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_4,
            exhaust_camshaft: _exhaust_cam_4
        )
    )
    _b5.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_5,
            exhaust_camshaft: _exhaust_cam_5
        )
    )
    _b6.set_cylinder_head(
        head(
            intake_camshaft: _intake_cam_6,
            exhaust_camshaft: _exhaust_cam_6
        )
    )

    ignition
        .connect_wire(_wire1, rot_base * 0 - shift)
        .connect_wire(_wire3, rot_base * 1 - shift)
        .connect_wire(_wire5, rot_base * 2 - shift)
        .connect_wire(_wire7, rot_base * 3 - shift)
        .connect_wire(_wire2, rot_base * 4 - shift)
        .connect_wire(_wire4, rot_base * 5 - shift)
        .connect_wire(_wire6, rot_base * 6 - shift)
}

private node add_flow_sample {
    input lift;
    input flow;
    input this;
    alias output __out: this;

    this.add_sample(lift * units.mm, k_28inH2O(flow))
}

public node head {
    // port_flow.py v1.7
    // intake port area: 6.1 cm²; saturated lift: 6.78 mm
    // exhaust port area: 6.1 cm²; saturated lift: 6.78 mm
    // cylinder volume: 539.1 cm³ (32.90 CI); engine volume: 3.774 L (230.28 CI)
    // chamber volume: 179.7 cm³ (10.97 CI); conrod/stroke 1.895; N.A.C.C. 31.36
    // 32 harmonic intake runner length: 33.2 cm; diameter: 2.1 cm
    // primary length: 95.6 cm, area: 6.1 cm², diameter: 2.8 cm
    // collector diameter: 5.2 cm, area: 21.3 cm²

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    generic_cylinder_head head(
        chamber_volume: 179.693 * units.cc,
        intake_runner_volume: 111.7 * units.cc,
        intake_runner_cross_section_area: 3.4 * units.cm2,
        exhaust_runner_volume: 37.2 * units.cc,
        exhaust_runner_cross_section_area: 6.1 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        valvetrain: standard_valvetrain(
            intake_camshaft: intake_camshaft,
            exhaust_camshaft: exhaust_camshaft
        ),
        flip_display: flip_display
    )
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "R.E.P. 7",
        starter_torque: 600 * units.Nm,
        starter_speed: 150 * units.rpm,
        redline: redline * units.rpm,
        fuel: a10(),
        throttle_gamma: 2.0,
        jitter: 0.6,
        noise: 0.1,
        hf_gain: 0.005,
        fluid_simulation_steps: 6,
        max_sle_solver_steps: 32,
        simulation_frequency: 6000,
        dyno_min_speed: 500 * units.rpm
    )

    label crank_moment(disk_moment_of_inertia(mass: crank_mass * units.kg, radius: (stroke / 2.0) * units.mm))
    label flywheel_moment(disk_moment_of_inertia(mass: flywheel_mass * units.kg, radius: (stroke * 3.5) * units.mm))
    label other_moment(disk_moment_of_inertia(mass: 1 * units.kg, radius: 1.0 * units.cm))

    crankshaft c0(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: flywheel_mass * units.kg,
        mass: crank_mass * units.kg,
        friction_torque: 5.7 * units.Nm,
        moment_of_inertia: crank_moment + flywheel_moment + other_moment,
        tdc: 0.0
    )

    bank_builder bank0(
        shift: 0,
        ignition: ignition,
        intake: intake,
        ex0: exhaust0,
        ex1: exhaust0,
        ex2: exhaust1,
        ex3: exhaust1,
        ex4: exhaust0,
        ex5: exhaust0,
        ex6: exhaust1,
        pl0,
        pl1,
        pl2,
        pl1,
        pl2,
        pl3,
        pl0
    )

    ignition_module ignition(timing_curve: timing_curve, rev_limit: 4000 * units.rpm, limiter_duration: 0.001)
    
    c0
        .add_rod_journal(bank0.rj0)
        .add_rod_journal(bank0.rj1)

    label collector_cross_section_area(10.7)

    intake intake(
        plenum_volume: 0.8 * units.L,
        plenum_cross_section_area: 11.8 * units.cm2,
        runner_length: 33.2 * units.cm,
        intake_flow_rate: k_carb(94.3),
        idle_flow_rate: k_carb(0.01),
        idle_throttle_plate_position: 0.992,
        runner_flow_rate: k_carb(27.0),
        velocity_decay: 0.05
    )
    
    label exhaust_pipe_length_0(220.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres
    
    label exhaust_pipe_length_1(200.0) // cm
    label exhaust_volume_1(collector_cross_section_area * exhaust_pipe_length_1 / 100.0) // Litres
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(78.6),
        collector_cross_section_area: 10.7 * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 95.6 * units.cm,
        primary_flow_rate: k_carb(44.9),
        velocity_decay: 0.8,
        volume: exhaust_volume_0 * units.L
    )
    
    exhaust_system_parameters es_params1(
        outlet_flow_rate: k_carb(78.6),
        collector_cross_section_area: 10.7 * units.cm2,
        length: exhaust_pipe_length_1 * units.cm,
        primary_tube_length: 95.6 * units.cm,
        primary_flow_rate: k_carb(44.9),
        velocity_decay: 0.8,
        volume: exhaust_volume_1 * units.L
    )

    exhaust_system exhaust0(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_45.wav", volume: 0.0015))
    exhaust_system exhaust1(es_params1, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_45.wav", volume: 0.0010))

    label spacing_factor(4.0)
    label flange_density(1.0 * exhaust_delay_coeff)
    label sh0(100.0 * units.mm)

    label pl0((1.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl1((2.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl2((3.0 * bore * spacing_factor / flange_density) * units.mm)
    label pl3((4.0 * bore * spacing_factor / flange_density) * units.mm)

    engine
        .add_cylinder_bank(bank0.b0)
        .add_cylinder_bank(bank0.b1)
        .add_cylinder_bank(bank0.b2)
        .add_cylinder_bank(bank0.b3)
        .add_cylinder_bank(bank0.b4)
        .add_cylinder_bank(bank0.b5)
        .add_cylinder_bank(bank0.b6)

        .add_crankshaft(c0)
        .add_ignition_module(ignition)

    function timing_curve(120.0 * units.rpm)
    timing_curve
        .add_sample(0.0 * units.rpm, 0.0 * units.deg)
        .add_sample(120.0 * units.rpm, 0.0 * units.deg)
        .add_sample(240.0 * units.rpm, 0.4 * units.deg)
        .add_sample(360.0 * units.rpm, 1.5 * units.deg)
        .add_sample(480.0 * units.rpm, 2.6 * units.deg)
        .add_sample(600.0 * units.rpm, 3.7 * units.deg)
        .add_sample(720.0 * units.rpm, 4.9 * units.deg)
        .add_sample(840.0 * units.rpm, 6.0 * units.deg)
        .add_sample(960.0 * units.rpm, 7.1 * units.deg)
        .add_sample(1080.0 * units.rpm, 8.2 * units.deg)
        .add_sample(1200.0 * units.rpm, 9.4 * units.deg)
        .add_sample(1320.0 * units.rpm, 10.5 * units.deg)
        .add_sample(1440.0 * units.rpm, 11.6 * units.deg)
        .add_sample(1560.0 * units.rpm, 12.7 * units.deg)
        .add_sample(1680.0 * units.rpm, 13.9 * units.deg)
        .add_sample(1800.0 * units.rpm, 15.0 * units.deg)
        .add_sample(1920.0 * units.rpm, -15.0 * units.deg)
        .add_sample(2040.0 * units.rpm, -60.0 * units.deg)
}

