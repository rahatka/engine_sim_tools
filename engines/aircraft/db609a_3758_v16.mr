        .add_lobe(ELC + 2 * rot + vee + inv)
        .add_lobe(ELC + 12 * rot + vee + inv)
        .add_lobe(ELC + 8 * rot + vee + inv)

    // 2-4-2
    rod_journal _rj0(angle: rot * 0 + rot90 + vee / 2 + rot180)
    rod_journal _rj1(angle: rot * 4 + rot90 + vee / 2 + rot180)
    rod_journal _rj2(angle: rot * 10 + rot90 + vee / 2 + rot180)
