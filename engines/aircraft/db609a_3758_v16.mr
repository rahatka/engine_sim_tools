units units()
constants constants()

// Engine Sim V0.1.14A
// Daimler-Benz DB 609A
// db609a
// Created by oror 2023

// 0: mirrored firing
// 1: inverted firing
label variant(1)

label bore(165.0)
label stroke(180.0)
label compression_ratio(6.9)
label con_rod(306.0) // ~ 1.7 of stroke?
label compression_height(70.0 * units.mm) // ~
label intake_valve_diameter(66.5) // ~
label exhaust_valve_diameter(63.0) // ~
label intake_valves(2.0)
label exhaust_valves(2.0)

label cyl(16.0)
label row(2.0)
label cycle(720.0 * units.deg)
label vee(60.0 * units.deg)
label rot(cycle / cyl)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)

label redline(3000.0)

// Daimler-Benz DB 603 valve timing
label IVL(14.1)
label EVL(14.1)
label IVO(62.0 * units.deg) //BTDC
label IVC(48.0 * units.deg) //ABDC
label EVO(67.0 * units.deg) //BBDC
label EVC(43.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180) 
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label inv((360.0 * variant) * units.deg)

