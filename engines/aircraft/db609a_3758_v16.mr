public node layout_0 {
    input wires;
    input timing_curve;
    input rev_limit;
    input limiter_duration;

    output intake_cam_0: _intake_cam_0;
    output exhaust_cam_0: _exhaust_cam_0;

    output intake_cam_1: _intake_cam_1;
    output exhaust_cam_1: _exhaust_cam_1;

    output rj0: _rj0;
    output rj1: _rj1;
    output rj2: _rj2;
    output rj3: _rj3;
    output rj4: _rj4;
    output rj5: _rj5;
    output rj6: _rj6;
    output rj7: _rj7;

    output ignition: _ign;

    ignition_module _ign(timing_curve: timing_curve, rev_limit: rev_limit, limiter_duration: limiter_duration)
    _ign
        .connect_wire(wires.wire1, rot * 0)
        .connect_wire(wires.wire6, rot * 2)
        .connect_wire(wires.wire2, rot * 4)
        .connect_wire(wires.wire5, rot * 6)
        .connect_wire(wires.wire8, rot * 8)
        .connect_wire(wires.wire3, rot * 10)
        .connect_wire(wires.wire7, rot * 12)
        .connect_wire(wires.wire4, rot * 14)
        .connect_wire(wires.wire9, rot * 0 + vee + inv)
        .connect_wire(wires.wire14, rot * 2 + vee + inv)
        .connect_wire(wires.wire10, rot * 4 + vee + inv)
        .connect_wire(wires.wire13, rot * 6 + vee + inv)
        .connect_wire(wires.wire16, rot * 8 + vee + inv)
        .connect_wire(wires.wire11, rot * 10 + vee + inv)
        .connect_wire(wires.wire15, rot * 12 + vee + inv)
        .connect_wire(wires.wire12, rot * 14 + vee + inv)

    camshaft _intake_cam_0(base_radius: 28.2 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: 28.2 * units.mm, lobe_profile: exhaust_lobe_profile)
    
    camshaft _intake_cam_1(base_radius: 28.2 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_1(base_radius: 28.2 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0
        .add_lobe(ILC + 0 * rot)
        .add_lobe(ILC + 4 * rot)
        .add_lobe(ILC + 10 * rot)
        .add_lobe(ILC + 14 * rot)
        .add_lobe(ILC + 6 * rot)
        .add_lobe(ILC + 2 * rot)
        .add_lobe(ILC + 12 * rot)
        .add_lobe(ILC + 8 * rot)
    _exhaust_cam_0
        .add_lobe(ELC + 0 * rot)
        .add_lobe(ELC + 4 * rot)
        .add_lobe(ELC + 10 * rot)
        .add_lobe(ELC + 14 * rot)
        .add_lobe(ELC + 6 * rot)
        .add_lobe(ELC + 2 * rot)
        .add_lobe(ELC + 12 * rot)
        .add_lobe(ELC + 8 * rot)
        
    _intake_cam_1
        .add_lobe(ILC + 0 * rot + vee + inv)
        .add_lobe(ILC + 4 * rot + vee + inv)
        .add_lobe(ILC + 10 * rot + vee + inv)
        .add_lobe(ILC + 14 * rot + vee + inv)
        .add_lobe(ILC + 6 * rot + vee + inv)
        .add_lobe(ILC + 2 * rot + vee + inv)
        .add_lobe(ILC + 12 * rot + vee + inv)
        .add_lobe(ILC + 8 * rot + vee + inv)
    _exhaust_cam_1
        .add_lobe(ELC + 0 * rot + vee + inv)
        .add_lobe(ELC + 4 * rot + vee + inv)
        .add_lobe(ELC + 10 * rot + vee + inv)
        .add_lobe(ELC + 14 * rot + vee + inv)
