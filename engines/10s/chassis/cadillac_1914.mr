import "engine_sim.mr"

units units()

// 32.6 NACC 365.8 4 1/2 x 5 3/4 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1338.098) // 2950 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.66, // or 2.5 44/12 = 3.666667
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.333) // 40/12 = 3.333333
        .add_gear(1.817) // 40/22 = 1.818182
        .add_gear(1.00);
}
