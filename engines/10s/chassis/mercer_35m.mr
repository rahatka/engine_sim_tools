import "engine_sim.mr"

units units()

// 32.4 NACC 318.1 4 1/2 x 5 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1451.495584) // 3200 lb (stand-in)
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.0,
        tire_radius: (922.0 / 2) * units.mm, // 35 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.400) // 51/15 = 3.4
        .add_gear(1.830) // 22/12 = 1.833333
        .add_gear(1.360) // 34/25 = 1.36
        .add_gear(1.000);
}
