import "engine_sim.mr"

units units()

// 29.4 NACC 288.5 3 1/2 x 5 6c 6-40
// 40.9 NACC 420.9 4 1/8 x 5 1/4 6c 6-54
public node veh {
    alias output __out: vehicle;
    label car_mass(1360.777) // 3000 fully equipped 6-40
    // label car_mass(1750.865) // 3860 fully equipped 6-54
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.7, // 48/13 = 3.692308
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4 6-40
        // tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2 6-54
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.757) // 58/21 = 2.761905
        .add_gear(1.541) // 37/24 = 1.541667
        .add_gear(1.00)
        .add_gear(0.784); // 29/37 = 0.783784
}
