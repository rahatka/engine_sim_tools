import "engine_sim.mr"

units units()

// 43.35 NACC 489.43 4 1/4 x 5 3/4 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1905.088) // 4200 lb fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.4, // 51/15 = 3.4
        tire_radius: (965.0 / 2) * units.mm, // 37 x 5
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 350 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.441) // 55/16 = 3.437500
        .add_gear(1.971) // 59/30 = 1.966667
        .add_gear(1.412) // 24/17 = 1.411765
        .add_gear(1.00);
}
