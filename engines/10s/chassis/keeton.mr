import "engine_sim.mr"

units units()

// 33.75 NACC 364.4 3 3/4 x 5 1/2 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1705.507) // 3760 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.5,
        tire_radius: (965.0 / 2) * units.mm, // 37 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.751) // 33/12 = 2.75
        .add_gear(1.560) // 39/25 = 1.56
        .add_gear(1.00)
        .add_gear(0.829); // 34/41 = 0.829268
}
