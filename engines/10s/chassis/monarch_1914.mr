import "engine_sim.mr"

units units()

// 16.27 NACC 159.6 3.190 x 5 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1031.922642) // 2275 lb fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.33, // 52/12 = 4.333333
        tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.841) // 50/13 = 3.846154
        .add_gear(2.252) // 27/12 = 2.25
        .add_gear(1.00);
}
