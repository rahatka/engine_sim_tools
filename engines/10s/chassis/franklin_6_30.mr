import "engine_sim.mr"

units units()

// 31.6 NACC 247.69 3 5/8 x 4 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1236.039) // 2725 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.71, // 52/14 = 3.714286
        tire_radius: (878.0 / 2) * units.mm, // 34 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.359) // 47/14 = 3.357143
        .add_gear(1.760) // 44/25 = 1.76
        .add_gear(1.00);
}
