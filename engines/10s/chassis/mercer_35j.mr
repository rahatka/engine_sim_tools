import "engine_sim.mr"

units units()

// 30.63 NACC 300.7 4 3/8 x 5 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1655.612) // 3650 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 2.52, // 58/23 = 2.521739
        tire_radius: (838.0 / 2) * units.mm, // 32 x 4
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.405) // 51/15 = 3.4
        .add_gear(1.833) // 22/12 = 1.833333
        .add_gear(1.377) // 51/37 = 1.378378
        .add_gear(1.000);
}
