import "engine_sim.mr"

units units()

// 34.25 NACC 352.8 4 5/8 x 5 1/4 4c 9-45
// 33.75 NACC Conitnental 6P 347.8 3 3/4 x 5 1/4 6c 10-50
public node veh {
    alias output __out: vehicle;
    label car_mass(1564.893) // 3450 lb fully equipped 9-45
    // label car_mass(1610.252) // 3550 lb fully equipped 10-50
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.93, // 55/14 = 3.928571
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 9-45
        // tire_radius: (965.0 / 2) * units.mm, // 37 x 4 1/2 10-50
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 350 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.219) // 58/18 = 3.222222
        .add_gear(1.685) // 59/35 = 1.685714
        .add_gear(1.00)
        .add_gear(0.791); // 34/43 = 0.790698
}
