import "engine_sim.mr"

units units()

// 22.5 NACC 231.9 3 3/4 x 5 1/4 4c 93
// 33.75 NACC 347 3 3/4 x 5 1/4 6c 96
public node veh {
    alias output __out: vehicle;
    label car_mass(1315.418) // 2900 fully equipped 93
    // label car_mass(1655.612) // 3650 fully equipped 96
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.08, // 53/13 = 4.076923 3.92 96
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4 93
        // tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2 96
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.059) // 52/17 = 3.058824
        .add_gear(1.658) // 58/35 = 1.657143
        .add_gear(1.00)
        .add_gear(0.834); // 15/18 = 0.833333
}
