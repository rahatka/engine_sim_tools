import "engine_sim.mr"

units units()

// 22.5 NACC 265 3 3/4 & 6 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1678.292) // 3700 lb fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.75, // 45/12 = 3.75
        tire_radius: (922.0 / 2) * units.mm, // 35 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.787) // 53/14 = 3.785714
        .add_gear(2.293) // 39/17 = 2.294118
        .add_gear(1.6) // 24/15 = 1.6
        .add_gear(1.00);
}
