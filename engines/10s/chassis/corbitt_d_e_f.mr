import "engine_sim.mr"

units units()

// 25.6 NACC 226.2 4 x 4 1/2 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1224.699) // 2700 fully equipped D
    // label car_mass(1292.738) // 2850 fully equipped E
    // label car_mass(1360.777) // 3000 fully equipped F
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.78, // 53/14 = 3.785714
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(4.101) // 49/12 = 4.083333
        .add_gear(2.097) // 44/21 = 2.095238
        .add_gear(1.00);
}
