import "engine_sim.mr"

units units()

// 27.25 NACC 267.3 4 1/8 x 5 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1315.418) // 2900 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0, // 48/12 = 4.0
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.75) // 45/12 = 3.75
        .add_gear(1.63) // 44/27 = 1.629630
        .add_gear(1.00);
}
