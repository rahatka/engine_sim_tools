import "engine_sim.mr"

units units()

// 40.9 NACC 420.9 4 1/8 x 5 1/4 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1814.369480) // 4000 lb fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 2.95, // 59/20 = 2.95
        tire_radius: (922.0 / 2) * units.mm, // 35 x 5
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 350 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(4.182) // 50/12 = 4.166667
        .add_gear(2.046) // 45/22 = 2.045455
        .add_gear(1.278) // 23/18 = 1.277778
        .add_gear(1.00);
}
