import "engine_sim.mr"

units units()

// 40.9 NACC 420.9 4 1/8 & 5 1/4 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1769.011) // 3900 lb fully equipped Roadster
    // label car_mass(1859.729) // 4100 lb fully equipped 4 pass
    // label car_mass(1905.088) // 4200 lb fully equipped 5 pass
    // label car_mass(1950.447) // 4300 lb fully equipped 7 pass
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.93, //  55/14 = 3.928571
        tire_radius: (965.0 / 2) * units.mm, // 37 x 5
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.282) // 46/14 = 3.285714
        .add_gear(1.514) // 53/35 = 1.514286
        .add_gear(1.00)
        .add_gear(0.763); // 29/38 = 0.763158
}
