import "engine_sim.mr"

units units()

// 22.5 NACC 165.7 3 3/4 x 3 3/4 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(993.367) // 2190 fully equipped
    //label car_mass(1067.759) // B-25 2354 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0,
        tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 180 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.35) // 57/17 = 3.352941
        .add_gear(1.50) // 18/12 = 1.5
        .add_gear(1.00);
}
