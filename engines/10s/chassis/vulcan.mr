import "engine_sim.mr"

units units()

// 18.25 NACC 178.9 3 3/8 x 5 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(793.787) // 1750 lb fully equipped // speedster
    // label car_mass(884.505) // 1950 lb fully equipped // touring
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0,
        tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.275) // 59/18 = 3.277778
        .add_gear(1.875) // 30/16 = 1.875
        .add_gear(1.00);
}
