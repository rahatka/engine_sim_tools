import "engine_sim.mr"

units units()

// 38.6 NACC 414.8 4 x 5 1/2 6c C
// 36.06 NACC 353.7 3 7/8 x 5 6c C
public node veh {
    alias output __out: vehicle;
    label car_mass(1814.369480) // 4000 lb fully equipped C
    label car_mass(1542.214058) // 3400 lb fully equipped D
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.78, // 53/14 = 3.785714
        tire_radius: (1003.0 / 2) * units.mm, // 39 x 5 C
        tire_radius: (939.8 / 2) * units.mm, // 37 x 4 D
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.698) // 54/20 = 2.7
        .add_gear(1.505) // 18/12 = 1.5
        .add_gear(1.00)
        .add_gear(0.802); // 45/56 = 0.803571
}
