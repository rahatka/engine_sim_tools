import "engine_sim.mr"

units units()

// 48.6 NACC 572.5 4 1/2 x 6 6c 48-6
// 60.0 NACC 824.8 5 x 7 6c 60-6
public node veh {
    alias output __out: vehicle;
    // label car_mass(2177.243376) // 4800 lb fully equipped 48-6
    label car_mass(2313.321087) // 5100 lb fully equipped 60-6
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 2.59, // 3.17 48-6 ; 2.59 6-60
        // tire_radius: (965.0 / 2) * units.mm, // 37 x 5
        tire_radius: (991.0 / 2) * units.mm, // 38 x 5 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 500 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.600) // 3.584 + 3.610
        .add_gear(1.958) // 1.959 + 1.958
        .add_gear(1.400) // 1.394 + 1.398
        .add_gear(1.000);
}
