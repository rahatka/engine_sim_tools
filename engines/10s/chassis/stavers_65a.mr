import "engine_sim.mr"

units units()

// 38.4 NACC 452.4 4 x 6 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1746.330) // 3850 lb fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.5,
        tire_radius: (965.0 / 2) * units.mm, // 37 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.2) // 48/15 = 3.2
        .add_gear(1.749) // 21/12 = 1.75
        .add_gear(1.00)
        .add_gear(0.846); // 22/26 = 0.846154
}
