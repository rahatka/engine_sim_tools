import "engine_sim.mr"

units units()

// 25.6 NACC 232.5 4 x 4 5/8 4c 4-30
// 29.71 NACC 335.9 4.320 x 5 3/4 4c 4-40
// 40.9 NACC 441 4 1/8 x 5 1/2 6c 6-50
// 44.88 NACC 503.8 4.320 x 5 3/4 6c 6-60
public node veh {
    alias output __out: vehicle;
    // label car_mass(1270.058) // 2800 fully equipped 4-30
    // label car_mass(1428.816) // 3150 fully equipped 4-40
    // label car_mass(1564.894) // 3450 fully equipped 6-50
    label car_mass(1769.010) // 3900 fully equipped 6-60
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.7, // 4.0 4-30 ; 3.7 other
        tire_radius: (965.0 / 2) * units.mm, // 37 x 5
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.800) // 42/15 = 2.8
        .add_gear(2.032) // 59/29 = 2.034483
        .add_gear(1.00)
        .add_gear(0.727); // 16/22 = 0.727273
}
