import "engine_sim.mr"

units units()

// 28.9 NACC 468 4 1/4 x 5 1/2 6c 26
// 43.8 NACC 468 4 1/4 x 5 1/2 6c 27, 28
public node veh {
    alias output __out: vehicle;
    label car_mass(1723.650) // 3800 fully equipped 26
    // label car_mass(1814.369) // 4000 fully equipped 27
    // label car_mass(1542.214) // 3400 fully equipped 28
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.66, // 3.69 28
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2
        // tire_radius: (921.0 / 2) * units.mm, // 34 x 4 28
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.366) // 47/14 = 3.357143
        .add_gear(1.508) // 59/39 = 1.512821
        .add_gear(1.00);
}
