import "engine_sim.mr"

units units()

// 38.0 NACC 485.3 4 7/8 & 6 1/2 4c 38
// 46.0 NACC 589.96 5 3/8 & 6 1/2 4c 50
public node veh {
    alias output __out: vehicle;
    label car_mass(1678.292) // 3700 lb fully equipped 38
    // label car_mass(1651.076) // 3640 lb fully equipped 50
    // label car_mass(1587.573) // 3500 lb fully equipped 75
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 2.75, // 2.13 50, 75
        tire_radius: (922.0 / 2) * units.mm, // 35 x 5 38
        tire_radius: (965.0 / 2) * units.mm, // 37 x 5
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(4.029) // 48/12 = 4.0
        .add_gear(1.975) // 59/30 = 1.966667
        .add_gear(1.32) // 33/25 = 1.32
        .add_gear(1.00);
}
