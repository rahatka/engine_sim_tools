import "engine_sim.mr"

units units()

// 30.0 NACC 360.8 4 3/8 x 6 4c 54
// 42.0 NACC 557 5 1/8 x 6 3/4 4c 55
// 45.0 NACC 521.9 4.330 x 5.905 6c 56
public node veh {
    alias output __out: vehicle;
    // label car_mass(1632.933) // 3600 fully equipped 54
    label car_mass(1932.303) // 4260 fully equipped 55, 56
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: 27.0 * (units.foot * units.foot), // ?
        diff_ratio: 2.7, // 3.28 54 59/18 = 3.277778 ; 2.7 55 54/20 = 2.7 ; 3.06 56 52/17 = 3.058824
        // tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2 54
        tire_radius: (965.0 / 2) * units.mm, // 37 x 5 55, 56
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 450 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.829) // 46/12 = 3.833333
        .add_gear(2.463) // 32/13 = 2.461538
        .add_gear(1.637) // 36/22 = 1.636364
        .add_gear(1.00);
}
