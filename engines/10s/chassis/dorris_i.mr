import "engine_sim.mr"

units units()

// 30.63 NACC 300.7 4 3/8 x 5 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1651.078) // 3640 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.66, // 44/12 = 3.666667
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.366) // 47/14 = 3.357143
        .add_gear(1.708) // 41/24 = 1.708333
        .add_gear(1.00);
}
