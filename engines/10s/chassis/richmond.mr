import "engine_sim.mr"

units units()

// 27.25 NACC 267.3 4 1/8 x 5 4c R
// 32.4 NACC 318.1 4 1/8 x 5 4c S
// 38.4 NACC 339.3 4 x 4 1/2 6c T
public node veh {
    alias output __out: vehicle;
    label car_mass(1292.738) // 2850 lb fully equipped R
    // label car_mass(1338.097) // 2950 lb fully equipped S
    // label car_mass(1406.136) // 3100 lb fully equipped T
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0,
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.915) // 35/12 = 2.916667
        .add_gear(2.165) // 26/12 = 2.166667
        .add_gear(1.00);
}
