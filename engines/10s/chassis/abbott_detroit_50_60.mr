// 1914 Abbott-Detroit 50-60
// https://archive.org/details/sim_motor-age_1914-02-12_25_7/page/26/mode/2up

import "engine_sim.mr"

units units()

// 33.75 NACC 347.8 3 3/4 x 5 1/4 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1642.004) // 3620 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.2, // 48/15 = 3.2
        tire_radius: (922.0 / 2) * units.mm, // 35 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 350 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.406) // 51/15 = 3.4
        .add_gear(1.909) // 42/22 = 1.909091
        .add_gear(1.250) // 20/16 = 1.25
        .add_gear(1.000);
}