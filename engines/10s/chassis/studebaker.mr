import "engine_sim.mr"

units units()

// 19.6 NACC 192.4 3 1/2 x 5 4c four
// 29.4 NACC 288.6 3 1/2 x 5 6c six
public node veh {
    alias output __out: vehicle;
    // label car_mass(1179.34) // approx 2600
    label car_mass(1587.57) // approx 3500
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        // diff_ratio: 4.0, // four
        diff_ratio: 3.7, // six
        // tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2 four
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4 six
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 350 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.65) // 51/14 = 3.642857
        .add_gear(2.00)
        .add_gear(1.00);
}
