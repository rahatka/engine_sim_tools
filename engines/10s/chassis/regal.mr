import "engine_sim.mr"

units units()

// 22.5 NACC 198.8 3 3/4 x 4 1/2 4c T, N, NC
// 25.6 NACC 251.3 4 x 5 4c C
public node veh {
    alias output __out: vehicle;
    label car_mass(1088.622) // 2400 lb fully equipped T
    // label car_mass(1020.583) // 2250 lb fully equipped N
    // label car_mass(1213.360) // 2675 lb fully equipped NC
    // label car_mass(1224.699) // 2700 lb fully equipped C
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.68, // T, N, NC  59/16 = 3.6875
        diff_ratio: 4.08, // C 53/13 = 4.076923
        tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2 T, N, NC
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4 C
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.671) // 32/12 = 2.666667
        .add_gear(1.505) // 18/12 = 1.5
        .add_gear(1.00);
}
