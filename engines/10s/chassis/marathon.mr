import "engine_sim.mr"

units units()

// 19.6 NACC 173.2 3 1/2 x 4 1/2 4c Runner
// 28.9 NACC 255.4 4 1/4 x 4 1/2 4c Winner
// 32.6 NACC 326.1 4 1/2 & 5 1/8 4c Champ

public node veh {
    alias output __out: vehicle;
    label car_mass(907.185) // 2000 fully equipped Runner
    // label car_mass(1224.699) // 2700 fully equipped Winner
    // label car_mass(1451.495) // 3200 fully equipped Champ
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0,
        tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2 Runner
        // tire_radius: (921.0 / 2) * units.mm, // 34 x 4 Winner
        // tire_radius: (935.0 / 2) * units.mm, // 36 x 4 Champ
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.75)
        .add_gear(1.50)
        .add_gear(1.00);
}
