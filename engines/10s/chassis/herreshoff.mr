import "engine_sim.mr"

units units()

// 18.25 NACC 161 3 3/8 x 4 1/2 4c 4-30
// 27.25 NACC 241.5 3 3/8 x 4 1/2 6c 6-40
public node veh {
    alias output __out: vehicle;
    label car_mass(997.903) // 2200 fully equipped // 4-30
    // label car_mass(997.903) // 2200 fully equipped // 6-40
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 7.0, // 3.0 roadster
        tire_radius: (820.4 / 2) * units.mm, // 32 x 3 1/2 4-30
        // tire_radius: (921.0 / 2) * units.mm, // 34 x 4 6-40
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.571) // 36/14 = 2.571429
        .add_gear(1.714) // 24/14 = 1.714286
        .add_gear(1.00)
        .add_gear(0.571); // 12/21 = 0.571429
}
