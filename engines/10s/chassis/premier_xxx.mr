import "engine_sim.mr"

units units()

// 38.4 NACC 414.69 4 x 5 1/2 6c
public node veh {
    alias output __out: vehicle;
    label car_mass(1632.932532) // 3600 lb fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.79, // 53/14 = 3.785714
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 250 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.351) // 57/17 = 3.352941
        .add_gear(1.902) // 59/31 = 1.903226
        .add_gear(1.00);
}
