import "engine_sim.mr"

units units()

// 43.8 NACC 425.4 4 1/4 x 5 6c 38
// 48.6 NACC 525 4 1/2 x 5 1/2 6c 48
public node veh {
    alias output __out: vehicle;
    // label car_mass(2041.165) // 4500 fully equipped 38LD
    // label car_mass(1964.020) // 4330 fully equipped 38RD
    // car_mass(2145.477) // 4730 fully equipped 48LD
    label car_mass(2113.721) // 4660 fully equipped 48RD
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 3.54, // 46/13 = 3.538462
        tire_radius: (965.0 / 2) * units.mm, // 37 x 5
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 700 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.997) // 48/12 = 4.0
        .add_gear(1.918) // 23/12 = 1.916667
        .add_gear(1.395) // 53/38 = 1.394737
        .add_gear(1.00);
}
