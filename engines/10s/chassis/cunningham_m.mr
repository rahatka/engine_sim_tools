import "engine_sim.mr"

units units()

// 36.1 NACC 407.6 4 3/4 x 5 3/4 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1905.088) // 4200 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: 27.0 * (units.foot * units.foot), // ?
        diff_ratio: 3.44, // 55/16 = 3.4375
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.25) // 52/16 = 3.25
        .add_gear(1.80) // 27/15 = 1.8
        .add_gear(1.00);
}
