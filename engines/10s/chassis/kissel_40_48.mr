import "engine_sim.mr"

units units()

// 32.4 NACC 334 4 1/2 x 5 1/4 4c 40-4
// 33.5 NACC 364.4 3 3/4 x 5 1/2 6c 48-6
public node veh {
    alias output __out: vehicle;
    label car_mass(1451.495) // 3200 fully equipped 40-4
    // label car_mass(1723.650) // 3800 fully equipped 48-6
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0,
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 40-4
        // tire_radius: (935.0 / 2) * units.mm, // 36 x 4 1/2 48-6
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.220) // 58/18 = 3.222222
        .add_gear(1.755) // 58/33 = 1.757576
        .add_gear(1.00)
        .add_gear(0.845); // 49/58 = 0.844828
}
