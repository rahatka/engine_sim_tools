import "engine_sim.mr"

units units()

// 25.6 NACC 251.3 4 x 5 4c D4x
// 28.9 NACC 312 4 1/4 & 5 1/2 4c D5x
// 33.75 NACC 364.4 3 3/4 x 5 1/2 6c D6x
public node veh {
    alias output __out: vehicle;
    // label car_mass(1020.571) // 2250 fully equipped D42, D45
    // label car_mass(1360.777) // 3000 fully equipped D52, D54, D55, D56
    label car_mass(1485.514) // 3275 fully equipped D62, D64, D65, D66
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: (1700 * units.mm) * (1800 * units.mm), // ?
        diff_ratio: 4.0,
        // tire_radius: (859.0 / 2) * units.mm, // 33 x 4 D42, D45
        // tire_radius: (921.0 / 2) * units.mm, // 34 x 4 D52, D54, D55, D56
        tire_radius: (935.0 / 2) * units.mm, // 36 x 4 D62, D64, D65, D66
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 300 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(2.66) // 32/12 = 2.666667
        .add_gear(1.50)
        .add_gear(1.00);
}
