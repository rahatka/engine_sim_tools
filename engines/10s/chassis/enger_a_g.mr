import "engine_sim.mr"

units units()

// 32.4 NACC 334 4 1/2 x 5 1/4 4c
public node veh {
    alias output __out: vehicle;
    label car_mass(1338.098) // 2950 fully equipped
    vehicle vehicle(
        mass: car_mass * units.kg,
        drag_coefficient: 0.95, // chatgpt
        cross_sectional_area: 27.0 * (units.foot * units.foot), // ?
        diff_ratio: 3.5, // 4.75 V12
        tire_radius: (921.0 / 2) * units.mm, // 34 x 4 ; 32 x 4 V12
        rolling_resistance: 0.013 * car_mass * 9.81
        )
}

public node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 200 * units.Nm,
            max_clutch_flex: 10 * units.deg, // 5–12°
            limit_clutch_flex: true,
            clutch_stiffness: 80 * units.Nm / units.deg, // 80–200 Nm/°
            clutch_damping: 2.0,
            simulate_flex: true
        )
        .add_gear(3.0)
        .add_gear(1.714) // 24/14 = 1.714286
        .add_gear(1.00);
}
