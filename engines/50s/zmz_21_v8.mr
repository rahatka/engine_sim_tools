label cyl(8.0)
label row(2.0)
label cyl_base(4.0)
label cycle(720.0 * units.deg)
label vee(90.0 * units.deg)
label rot_base(2.0 * (360.0 / cyl_base) * units.deg)
label rot90(90.0 * units.deg)
label rot180(180.0 * units.deg)
label rot360(360.0 * units.deg)
label sb_shift((90 + (360 * sb_pos)) * units.deg)

// ZMZ-21 valve timings
label IVL(9.5)
label EVL(8.5)
label IVO(24.0 * units.deg) //BTDC
label IVC(64.0 * units.deg) //ABDC
label EVO(50.0 * units.deg) //BBDC
label EVC(22.0 * units.deg) //ATDC

label intake_duration(IVO + IVC + rot180)
label exhaust_duration(EVO + EVC + rot180)

label ILC((rot180 - IVO + IVC) / 2.0 + rot360)
label ELC((rot180 - EVO + EVC) / 2.0 + rot180)

label exhaust_delay_coeff(1.5)

public node eng_distributor {
    input wires;
    input timing_curve;
    input rev_limit: 5500 * units.rpm;
    input limiter_duration: 0.0001;
    alias output __out:
        ignition_module(timing_curve: timing_curve, rev_limit: rev_limit, limiter_duration: limiter_duration)
            .connect_wire(wires.wire1, rot_base * 0)
            .connect_wire(wires.wire2, rot_base * 1)
            .connect_wire(wires.wire4, rot_base * 2)
            .connect_wire(wires.wire3, rot_base * 3)
            .connect_wire(wires.wire5, rot_base * 0 + sb_shift)
            .connect_wire(wires.wire6, rot_base * 1 + sb_shift)
            .connect_wire(wires.wire8, rot_base * 2 + sb_shift)
            .connect_wire(wires.wire7, rot_base * 3 + sb_shift);
}

private node wires {
    output wire1: ignition_wire();
    output wire2: ignition_wire();
    output wire3: ignition_wire();
    output wire4: ignition_wire();
    output wire5: ignition_wire();
    output wire6: ignition_wire();
    output wire7: ignition_wire();
    output wire8: ignition_wire();
}

