public node camshaft_builder {
    output intake_cam_0: _intake_cam_0;
    output exhaust_cam_0: _exhaust_cam_0;
    output intake_cam_1: _intake_cam_1;
    output exhaust_cam_1: _exhaust_cam_1;

    camshaft _intake_cam_0(base_radius: 17.3 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_0(base_radius: 17.3 * units.mm, lobe_profile: exhaust_lobe_profile)

    camshaft _intake_cam_1(base_radius: 17.3 * units.mm, lobe_profile: intake_lobe_profile)
    camshaft _exhaust_cam_1(base_radius: 17.3 * units.mm, lobe_profile: exhaust_lobe_profile)

    _intake_cam_0
        .add_lobe(ILC + 0 * rot_base)
        .add_lobe(ILC + 1 * rot_base)
        .add_lobe(ILC + 3 * rot_base)
        .add_lobe(ILC + 2 * rot_base)
    _exhaust_cam_0
        .add_lobe(ELC + 0 * rot_base)
        .add_lobe(ELC + 1 * rot_base)
        .add_lobe(ELC + 3 * rot_base)
        .add_lobe(ELC + 2 * rot_base)
        
    _intake_cam_1
        .add_lobe(ILC + 0 * rot_base + sb_shift)
        .add_lobe(ILC + 1 * rot_base + sb_shift)
        .add_lobe(ILC + 3 * rot_base + sb_shift)
        .add_lobe(ILC + 2 * rot_base + sb_shift)
    _exhaust_cam_1
        .add_lobe(ELC + 0 * rot_base + sb_shift)
        .add_lobe(ELC + 1 * rot_base + sb_shift)
        .add_lobe(ELC + 3 * rot_base + sb_shift)
        .add_lobe(ELC + 2 * rot_base + sb_shift)
}

private node add_flow_sample {
    input lift;
    input flow;
    input this;
    alias output __out: this;

    this.add_sample(lift * units.mm, k_28inH2O(flow))
}

public node head {
    // port_flow.py v1.5
    // intake port area: 11.8 cm²; saturated lift: 9.45 mm
    // exhaust port area: 7.9 cm²; saturated lift: 7.74 mm
    // cylinder volume: 611.6 cm³ (37.3 CI); engine volume: 4.893 L (298.6 CI)
    // chamber volume: 107.3 cm³ (6.5 CI)
    // 16 harmonic intake runner length: 21.3 cm; diameter: 3.8 cm
    // primary length: 39.9 cm, area: 8.7 cm², diameter: 3.3 cm
    // collector diameter: 5.2 cm, area: 20.9 cm²

    input intake_camshaft;
    input exhaust_camshaft;
    input flip_display: false;
    
    alias output __out: head;
    generic_cylinder_head head(
        chamber_volume: 107.295 * units.cc,
        intake_runner_volume: 241.5 * units.cc,
        intake_runner_cross_section_area: 11.4 * units.cm2,
        exhaust_runner_volume: 80.5 * units.cc,
        exhaust_runner_cross_section_area: 8.7 * units.cm2,

        intake_port_flow: intake_flow,
        exhaust_port_flow: exhaust_flow,
        valvetrain: standard_valvetrain(
            intake_camshaft: intake_camshaft,
            exhaust_camshaft: exhaust_camshaft
        ),
        flip_display: flip_display
    )
}

public node eng {
    alias output __out: engine;

    engine engine(
        name: "ZMZ-21 V8 (f)",
        starter_torque: 75 * units.Nm,
        starter_speed: 400 * units.rpm,
        redline: 5000 * units.rpm,
        fuel: s50(),
        throttle_gamma: 1.5,
        jitter: 0.7,
        noise: 0.2,
        hf_gain: 0.007,
        simulation_frequency: 8000 
    )

    wires wires()

    crankshaft c0(
        throw: (stroke / 2.0) * units.mm,
        flywheel_mass: 5.0 * units.kg,
        mass: 18.0 * units.kg,
        friction_torque: 7.3 * units.Nm,
        moment_of_inertia: 0.3,
        tdc: 0.0
    )

    rod_journal rj0(angle: rot_base * 0 + rot90 + vee / 2)
    rod_journal rj1(angle: rot_base * 1 + rot90 + vee / 2)
    rod_journal rj2(angle: rot_base * 3 + rot90 + vee / 2)
    rod_journal rj3(angle: rot_base * 2 + rot90 + vee / 2)
    
    c0
        .add_rod_journal(rj0)
        .add_rod_journal(rj1)
        .add_rod_journal(rj2)
        .add_rod_journal(rj3)

    piston_parameters piston_params(
        mass: 450.0 * units.g,
        blowby: k_28inH2O(0.029),
        compression_height: compression_height,
        wrist_pin_position: 0.0,
        displacement: 0.0
    )

    connecting_rod_parameters cr_params(
        mass: 650.0 * units.g,
        moment_of_inertia: 0.005,
        center_of_mass: 0.0,
        length: con_rod * units.mm
    )

    cylinder_bank_parameters bank_params(
        bore: bore * units.mm,
        deck_height: (con_rod + stroke / 2.0) * units.mm + compression_height
    )

    label collector_cross_section_area(20.9)

    label exhaust_pipe_length_0(350.0) // cm
    label exhaust_volume_0(collector_cross_section_area * exhaust_pipe_length_0 / 100.0) // Litres

    intake intake(
        plenum_volume: 2.9 * units.L,
        plenum_cross_section_area: 45.4 * units.cm2,
        runner_length: 21.3 * units.cm,
        intake_flow_rate: k_carb(407.7),
        idle_flow_rate: k_carb(0.03),
        idle_throttle_plate_position: 0.996,
        runner_flow_rate: k_carb(101.9),
        velocity_decay: 0.05
    )
    
    exhaust_system_parameters es_params0(
        outlet_flow_rate: k_carb(679.5),
        collector_cross_section_area: 20.9 * units.cm2,
        length: exhaust_pipe_length_0 * units.cm,
        primary_tube_length: 39.9 * units.cm,
        primary_flow_rate: k_carb(169.9),
        velocity_decay: 1.0,
        volume: (exhaust_volume_0 + 8.0) * units.L
    )

    exhaust_system exhaust0(es_params0, impulse_response: impulse_response(filename: "../../impulse_responses/smooth_55.wav", volume: 0.00025))
 
    cylinder_bank b0(bank_params, angle: vee / 2)
    cylinder_bank b1(bank_params, angle: -vee / 2)

    em1 em()

    b0
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj0,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl0,
            ignition_wire: wires.wire1
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj1,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl1,
            ignition_wire: wires.wire2
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj2,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl2,
            ignition_wire: wires.wire3
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj3,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl3,
            ignition_wire: wires.wire4
        )
    b1
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj0,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl0,
            ignition_wire: wires.wire5
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj1,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl1,
            ignition_wire: wires.wire6
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj2,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl2,
            ignition_wire: wires.wire7
        )
        .add_cylinder(
            piston: piston(piston_params),
            connecting_rod: connecting_rod(cr_params),
            rod_journal: rj3,
            intake: intake,
            exhaust_system: exhaust0,
            primary_length: em.pl3,
            ignition_wire: wires.wire8
        )

    engine
        .add_cylinder_bank(b0)
        .add_cylinder_bank(b1)

    engine.add_crankshaft(c0)

    camshaft_builder camshaft()

    b0.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_0,
            exhaust_camshaft: camshaft.exhaust_cam_0,
            flip_display: true
        )
    )
    
    b1.set_cylinder_head (
        head(
            intake_camshaft: camshaft.intake_cam_1,
            exhaust_camshaft: camshaft.exhaust_cam_1
        )
    )

    function timing_curve(500 * units.rpm)
    timing_curve
        .add_sample(0000 * units.rpm, 2 * units.deg)
        .add_sample(0500 * units.rpm, 7 * units.deg)
        .add_sample(1000 * units.rpm, 10 * units.deg)
        .add_sample(1500 * units.rpm, 14 * units.deg)
        .add_sample(2000 * units.rpm, 16 * units.deg)
        .add_sample(2500 * units.rpm, 18 * units.deg)
        .add_sample(3000 * units.rpm, 20 * units.deg)
        .add_sample(3500 * units.rpm, 22 * units.deg)
        .add_sample(4000 * units.rpm, 25 * units.deg)

    engine.add_ignition_module(
        eng_distributor(
            wires: wires,
            timing_curve: timing_curve
        )
    )
}

label spacing_factor(1.1)
label flange_density(1.0 * exhaust_delay_coeff)
label em_unit(bore * spacing_factor / flange_density)
label sh(20.0)

// stock long end manifold
private node em0{
    output pl0: (5.0 * em_unit + sh) * units.mm;
    output pl1: (3.2 * em_unit + sh) * units.mm;
    output pl2: (2.8 * em_unit + sh) * units.mm;
    output pl3: (1.0 * em_unit + sh) * units.mm;
    output pl4: (5.0 * em_unit) * units.mm;
    output pl5: (3.2 * em_unit) * units.mm;
    output pl6: (2.8 * em_unit) * units.mm;
    output pl7: (1.0 * em_unit) * units.mm;
}

// 3/4 manifold
private node em1{
    output pl0: (4.0 * em_unit + sh) * units.mm;
    output pl1: (2.2 * em_unit + sh) * units.mm;
    output pl2: (1.8 * em_unit + sh) * units.mm;
    output pl3: (2.0 * em_unit + sh) * units.mm;
    output pl4: (4.0 * em_unit) * units.mm;
    output pl5: (2.2 * em_unit) * units.mm;
    output pl6: (1.8 * em_unit) * units.mm;
    output pl7: (2.0 * em_unit) * units.mm;
}

// GAZ-21
public node veh {
    alias output __out: vehicle;
    vehicle vehicle(
        mass: 1460 * units.kg,
        drag_coefficient: 0.497,
        cross_sectional_area: (1800 * units.mm) * (1620 * units.mm),
        diff_ratio: 4.55,
        tire_radius: (715.0 / 2) * units.mm,
        rolling_resistance: 20
        )
}

// GAZ-21
private node trn {
    alias output __out:
        transmission(
            max_clutch_torque: 400 * units.Nm,
            max_clutch_flex: 30 * units.deg,
            limit_clutch_flex: true,
            clutch_stiffness: 10 * units.Nm / units.deg,
            clutch_damping: 1.0,
            simulate_flex: true
        )
        .add_gear(3.12)
        .add_gear(1.77)
        .add_gear(1.0);
}

run(
    engine: eng(),
    transmission: trn(),
    vehicle: veh()
)
